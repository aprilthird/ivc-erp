@model List<PayrollAuthorizationRequestViewModel>

@foreach (var item in Model)
{
    <div class='kt-widget4__item'>
        <div class='kt-widget4__pic kt-widget4__pic--pic'>
            <img src='../../themes/metronic/theme/default/demo1/dist/assets/media/users/100_4.jpg' alt=''>
        </div>
        <div class='kt-widget4__info'>
            <label class='kt-widget4__username'>
                @item.Title
            </label>
            <p class="kt-widget4__text">
                @item.Text
            </p>
        </div>
        <button value="@item.WeekId" class="btn btn-sm btn-label-brand btn-bold" onclick="sendAuth(this.value)">Aprobar</button>
    </div>
}
