@model (string title, string message, string id, string icon)
@{
    ViewBag.Title = "Mensaje";
    Layout = "_MessageLayout";
}

@section Styles {
    <link href="~/css/message.css" rel="stylesheet" />
}

<div class="container">
    <a href="@Url.Action("Login", "Account")">
        <img class="logo" src="~/media/logo-ivc.png">
    </a>
    <div class="message-container jumbotron">
        <h1 class="message-title">@Model.title</h1>
        <hr />
        <h3 class="message-content">@Model.message</h3>
        <hr />
        <div class="form-group row">
            <div class="col-lg-12">
                <label class="label">Observación por rechazo</label>
                <br />
                <textarea rows="10" style="width:60%" id="obs_text"></textarea>
            </div>
            <input value="@Model.id" id="submit_input" hidden />

        </div>
        <div>
            <button type="button" class="btn btn-primary" data-toggle="modal" id="order_submit">
                <span><i class="la la-send"></i><span>Enviar Observación</span></span>
            </button>
        </div>
        <br />
        <img src="@Model.icon" class="message-icon" style="width:100px;height:auto" />
    </div>

</div>

@section Scripts {
    <script type="text/javascript" src="jquery-3.5.1.min.js"></script>
    <script src="~/js/pages/message.js"></script>

}
