@model ConcreteQualityCertificateViewModel

<input asp-for="Id" hidden />

<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="CertificateSerialNumber" class="label"></label>
        <input asp-for="CertificateSerialNumber" class="form-control" required />
    </div>
    <div class="col-lg-6">
        <label asp-for="For07SerialNumber" class="label"></label>
        <input asp-for="For07SerialNumber" class="form-control" required />
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-5">
        <label asp-for="SamplingDate" class="label"></label>
        <div class="input-group">
            <input asp-for="SamplingDate" class="form-control datepicker" required />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>
    <div class="col-lg-5">
        <label asp-for="TestDate" class="label"></label>
        <div class="input-group">
            <input asp-for="TestDate" class="form-control datepicker" required />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
        <label asp-for="Age" class="label"></label>
        <select asp-for="Age" class="form-control kt-select2 select2-ages" required>
            @foreach (var item in ConstantHelpers.Certificate.ConcreteQuality.Age.VALUES)
            {
                <option value="@item.Key">@item.Value</option>
            }
        </select>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="FirstResult" class="label"></label>
        <input asp-for="FirstResult" class="form-control" required />
    </div>
    <div class="col-lg-6">
        <label asp-for="SecondResult" class="label"></label>
        <input asp-for="SecondResult" class="form-control" required />
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="CertificateFile" class="label"></label>
        <div class="custom-file">
            <input asp-for="CertificateFile" type="file" class="custom-file-input" required>
            <label class="custom-file-label" for="customFile">Escoge un archivo</label>
        </div>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="For07File" class="label"></label>
        <div class="custom-file">
            <input asp-for="For07File" type="file" class="custom-file-input" required>
            <label class="custom-file-label" for="customFile">Escoge un archivo</label>
        </div>
    </div>
</div>
<div id="kt_repeater_1">
    <div class="form-group form-group-last row" id="kt_repeater_1">
        <label class="col-lg-2 col-form-label">Buzones:</label>
        <div data-repeater-list="Details" class="col-lg-10">
            <partial name="_SubFields" />
        </div>
    </div>
    <div class="form-group form-group-last row">
        <label class="col-lg-2 col-form-label"></label>
        <div class="col-lg-4">
            <a href="javascript:;" data-repeater-create="" class="btn btn-bold btn-sm btn-label-brand">
                <i class="la la-plus"></i> Agregar
            </a>
        </div>
    </div>
</div>