@model PatternCalibrationRenewalViewModel
<input asp-for="Id" hidden />
<input asp-for="PatternCalibrationId" hidden />
<input asp-for="RenewalId" hidden />

<div class="form-group row">

    <div class="col-lg-12">
        <label asp-for="Responsibles" class="label" hidden></label>
        <input asp-for="Responsibles" hidden />
        @*<select name="select_users" class="form-control kt-select select2-users" multiple data-placeholder="Encargado(s)"></select>*@
    </div>

    <div class="col-lg-6">
        <label asp-for="CreateDate" class="label"></label>
        <div class="input-group">
            <input asp-for="CreateDate" class="form-control datepicker" required />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <label asp-for="EndDate" class="label"></label>
        <div class="input-group">
            <input asp-for="EndDate" class="form-control datepicker" required />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <label asp-for="ReferenceNumber" class="label"></label>
        <input asp-for="ReferenceNumber" class="form-control" />

    </div>

    @*<div class="col-lg-4">
            <label asp-for="CertifyingEntity" class="label"></label>
            <input asp-for="CertifyingEntity" class="form-control" />
        </div>*@

    <div class="col-lg-12">
        <label asp-for="Requestioner" class="label"></label>
        <input asp-for="Requestioner" class="form-control" />

    </div>



    <div class="col-lg-12">
        <label asp-for="EquipmentCertifyingEntityId" class="label"></label>
        <input asp-for="EquipmentCertifyingEntityId" hidden />
        <select name="select_entity" class="form-control kt-select select2-entities" data-placeholder="Cuadrilla"></select>
    </div>

    <div class="col-lg-12">
        <label asp-for="File" class="label"></label>
        <div class="custom-file">
            <input asp-for="File" type="file" class="custom-file-input" />
            <label class="custom-file-label" for="customFile">Escoge un archivo</label>
        </div>
    </div>

</div>