@model PatternCalibrationViewModel
<input asp-for="Id" hidden />
<input asp-for="PatternCalibrationRenewal.Id" hidden/>

<div class="form-group row">

    <div class="col-lg-12">
        <label asp-for="Name" class="label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
</div>

<div class="form-group row">

    <div class="col-lg-12">
        <label asp-for="PatternCalibrationRenewal.Responsibles" class="label" hidden></label>
        <input asp-for="PatternCalibrationRenewal.Responsibles" hidden />
        @*<select name="select_users" class="form-control kt-select select2-users" multiple data-placeholder="Encargado(s)"></select>*@
    </div>

    <div class="col-lg-6">
        <label asp-for="PatternCalibrationRenewal.CreateDate" class="label"></label>
        <div class="input-group">
            <input asp-for="PatternCalibrationRenewal.CreateDate" class="form-control datepicker" required />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <label asp-for="PatternCalibrationRenewal.EndDate" class="label"></label>
        <div class="input-group">
            <input asp-for="PatternCalibrationRenewal.EndDate" class="form-control datepicker" required />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>

    @*<div class="col-lg-4">
            <label asp-for="EquipmentCertificate.CertifyingEntity" class="label"></label>
            <input asp-for="EquipmentCertificate.CertifyingEntity" class="form-control" />
        </div>*@
    <div class="col-lg-12">
        <label asp-for="PatternCalibrationRenewal.ReferenceNumber" class="label"></label>
        <input asp-for="PatternCalibrationRenewal.ReferenceNumber" class="form-control" />

    </div>

    <div class="col-lg-12">
        <label asp-for="PatternCalibrationRenewal.Requestioner" class="label"></label>
        <input asp-for="PatternCalibrationRenewal.Requestioner" class="form-control" />

    </div>

    <div class="col-lg-12">
        <label asp-for="PatternCalibrationRenewal.EquipmentCertifyingEntityId" class="label"></label>
        <input asp-for="PatternCalibrationRenewal.EquipmentCertifyingEntityId" hidden />
        <select name="select_entity" class="form-control kt-select select2-entities" data-placeholder="Cuadrilla"></select>
    </div>

    <div class="col-lg-12">
        <label asp-for="PatternCalibrationRenewal.File" class="label"></label>
        <div class="custom-file">
            <input asp-for="PatternCalibrationRenewal.File" type="file" class="custom-file-input" />
            <label class="custom-file-label" for="customFile">Escoge un archivo</label>
        </div>
    </div>

</div>