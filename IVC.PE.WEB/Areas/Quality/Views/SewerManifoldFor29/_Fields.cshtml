@model SewerManifoldFor29ViewModel

<input asp-for="Id" hidden />

<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="SewerManifoldId" class="label"></label>
        <input asp-for="SewerManifoldId" hidden />
        <select name="select_manifold" class="form-control kt-select select2-manifolds"></select>
    </div>
    <div class="col-lg-4">
        <button id="SearchSelectManifold" type="button" class="search-manifold btn btn-secondary">Buscar</button>
    </div>
</div>

<div class="form-group row">
    <div class="col-lg-6">
        <div class="col-lg-12">
            <label asp-for="AsphaltType" class="label">Tipo de Asfaltado</label>
            <input asp-for="AsphaltType" hidden />
            <select name="select_asphalt_type" class="form-control kt-select select2-tts" data-placeholder="Tipo de Asfalto">
                @foreach (var item in ConstantHelpers.Asphalt.Type.NAMES)
                {
                    <option value="@item.Key">@item.Value</option>
                }
            </select>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="col-lg-12">
            <label asp-for="Thickness" class="label">Espesor</label>
            <input asp-for="Thickness" hidden />
            <select name="select_thickness" class="form-control kt-select select2-tts" data-placeholder="Espesor">
                @foreach (var item in ConstantHelpers.Thickness.Type.NAMES)
                {
                    <option value="@item.Key">@item.Value</option>
                }
            </select>
        </div>
    </div>
</div>

<div class="form-group row">
    <div class="col-lg-4">
        <label asp-for="AsphaltDate" class="label"></label>
        <div class="input-group">
            <input asp-for="AsphaltDate" class="form-control datepicker" />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <label asp-for="AsphaltArea" class="label"></label>
        <input asp-for="AsphaltArea" class="form-control" />
    </div>
    <div class="col-lg-4">
        <label asp-for="AreaToValue" class="label"></label>
        <input asp-for="AreaToValue" class="form-control" />
    </div>
</div>

<div class="form-group">
    <label asp-for="File" class="label">Archivo:</label>
    <div class="custom-file">
        <input asp-for="File" type="file" class="custom-file-input" />
        <label class="custom-file-label" for="customFile">Escoge un archivo</label>
    </div>
</div>