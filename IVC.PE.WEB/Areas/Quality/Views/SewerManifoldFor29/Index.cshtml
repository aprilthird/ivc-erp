@{
    ViewBag.Title = "For-29";
    ViewBag.SubTitle = "Protocolo de Reposicion de Pavimento Asfáltico";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.Quality.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.SubTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    @if (canEdit)
                    {
                        <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                            <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#add_modal"><span><i class="la la-plus"></i><span>Nuevo</span></span></button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="tab-content">
            <div class="tab-pane active" id="tab_project" role="tabpanel">
                <table class="table table-striped table-bordered table-hover table-checkable datatable" id="for29s_datatable" role="grid">
                    <thead>
                        <!--14-->
                        <tr>
                            <th colspan="3" style="text-align:center;">UBICACIÓN</th>
                            <th colspan="10" style="text-align:center;">TRAMOS</th>
                        </tr>
                        <tr>
                            <th rowspan="2" style="text-align:center;"># Protocolo</th>
                            <th rowspan="2" style="text-align:center;">CUADRILLA</th>
                            <th rowspan="2" style="text-align:center;">DIRECCIÓN</th>
                            <th rowspan="2" style="text-align:center;">Fecha de asfaltado</th>
                            <th rowspan="2" style="text-align:center;">Nombre</th>
                            <th colspan="3" style="text-align:center;">Proyecto</th>
                            <th colspan="5" style="text-align:center;">Real</th>
                            <th rowspan="2" style="text-align:center;">Opciones</th>
                        </tr>
                        <tr>
                            <td style="text-align:center;">Asfalto 2" (m²)</td>
                            <td style="text-align:center;">Asfalto 3" (m²)</td>
                            <td style="text-align:center;">Asfalto mixto (m²)</td>
                            <td style="text-align:center;">Long. entre ejes I</td>
                            <td style="text-align:center;">Tipo de asfalto</td>
                            <td style="text-align:center;">Espesor</td>
                            <td style="text-align:center;">Área Asfaltada (m²)</td>
                            <td style="text-align:center;">Área a Valorizar (m²)</td>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@if (canEdit)
{
    <partial name="_CreateModal" />
    <partial name="_EditModal" />
}
<partial name="_PdfModal" />

@section Scripts {
    @if (canEdit)
    {
        <script src="~/js/areas/quality/sewer-manifold-for29/index.js"></script>
    }
    else
    {
        <script src="~/js/areas/quality/sewer-manifold-for29/index.js"></script>
    }
}