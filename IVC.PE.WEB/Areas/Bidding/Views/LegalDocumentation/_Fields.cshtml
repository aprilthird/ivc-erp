@model LegalDocumentationViewModel
<input asp-for="Id" hidden />
<input asp-for="LegalDocumentationRenovation.Id" hidden />

<div class="form-group row">
    <div class="col-lg-8">
        <label asp-for="BusinessId" class="label"></label>
        <input asp-for="BusinessId" hidden />
        <select name="select_business" class="form-control kt-select select2-businesses" data-placeholder="Entidades"></select>
    </div>

    <div class="col-lg-4">
        <label asp-for="LegalDocumentationTypeId" class="label"></label>
        <input asp-for="LegalDocumentationTypeId" hidden />
        <select name="select_legaldoctype" class="form-control kt-select select2-legaldocType" data-placeholder="Tipo de Documento"></select>
    </div>

</div>

<div class="form-group row">

    <div class="col-lg-6">
        <label asp-for="LegalDocumentationRenovation.CreateDate" class="label"></label>
        <div class="input-group">
            <input asp-for="LegalDocumentationRenovation.CreateDate" class="form-control datepicker" required />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <label asp-for="LegalDocumentationRenovation.EndDate" class="label"></label>
        <div class="input-group">
            <input asp-for="LegalDocumentationRenovation.EndDate" class="form-control datepicker" required />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>

    @*<div class="col-lg-4">
            <label asp-for="LegalDocumentationRenovation.IsTheLast" class="label"></label>
            <input asp-for="LegalDocumentationRenovation.IsTheLast" hidden />
            <select name="select_isthelast" class="form-control kt-select select2-isthelast" required>
                <option value="false" selected>No</option>
                <option value="true">Sí</option>
            </select>
        </div>*@

    <div class="col-lg-12">
        <label asp-for="LegalDocumentationRenovation.File" class="label"></label>
        <div class="custom-file">
            <input asp-for="LegalDocumentationRenovation.File" type="file" class="custom-file-input" />
            <label class="custom-file-label" for="customFile">Escoge un archivo</label>
        </div>
    </div>

</div>




