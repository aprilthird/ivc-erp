@model BiddingCurrencyTypeViewModel
<input asp-for="Id" hidden />

<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="Currency" class="label"></label>
        <input asp-for="Currency" class="form-control" required />
    </div>

    <div class="col-lg-6">
        <label asp-for="PublicationDate" class="label"></label>
        <div class="input-group">
            <input asp-for="PublicationDate" class="form-control datepicker" required />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>
</div>