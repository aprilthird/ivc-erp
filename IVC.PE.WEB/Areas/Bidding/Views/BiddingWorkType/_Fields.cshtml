@model BiddingWorkTypeViewModel
<input asp-for="Id" hidden />

<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="Name" class="label"></label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="col-lg-12">
        <label asp-for="PillColor" class="label"></label>
        <input asp-for="PillColor" class="form-control" hidden />
        <select name="select_style" class="form-control kt-select2 select2-styles">
            @foreach (var item in ConstantHelpers.PillStyle.VALUES)
            {
                <option value="@item.Key">@item.Value</option>
            }
        </select>
    </div>

</div>