@{
    ViewBag.Title = "RRHH";
    ViewBag.Parameters = "Parametros de las Planillas";
    ViewBag.Categories = "Categorías";
    ViewBag.FundPensions = "Fondos de Pensión";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.HumanResources.FULL_ACCESS);
}
<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.Parameters
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <button type="button" class="btn btn-primary" id="copy_btn" data-toggle="modal" data-target="#parameter_add_modal">
                        <span>
                            <i class="la la-plus"></i>
                            <span>Nuevo</span>
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <table class="table table-striped table-bordered table-hover table-checkable" id="parameters_datatable" role="grid" width="100%"></table>
    </div>
</div>

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.Categories
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <table class="table table-striped table-bordered table-hover table-checkable" id="categories_datatable" role="grid" width="100%"></table>
    </div>
</div>

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.FundPensions
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <table class="table table-striped table-bordered table-hover table-checkable" id="fund_pensions_datatable" role="grid" width="100%"></table>
    </div>
</div>

@if (canEdit)
{
    <partial name="_ParameterCreateModal" />
    <partial name="_ParameterEditModal" />
    <partial name="_CategoryEditModal" />
    <partial name="_FundPensionEditModal" />
}

@section Scripts {
    @if (canEdit)
    {
        <script src="~/js/areas/human-resources/payroll-parameters/index.js"></script>
    }
    else
    {
        <script src="~/js/areas/human-resources/payroll-parameters/index.js"></script>

    }
}
