@model PayrollWorkerCategoryWageViewModel

<input asp-for="Id" hidden />
<input asp-for="WorkerCategoryId" hidden />

<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="WorkerCategoryName" class="label"></label>
        <input asp-for="WorkerCategoryName" class="form-control" disabled="disabled"/>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="DayWage" class="label"></label>
        <input asp-for="DayWage" class="form-control" required />
    </div>
    <div class="col-lg-6">
        <label asp-for="BUCRate" class="label"></label>
        <input asp-for="BUCRate" class="form-control" required />
    </div>
</div>