@model PayrollConceptViewModel

<input asp-for="Id" hidden/>

<div class="form-group row">
    <div class="col-lg-4">
        <label asp-for="Code" class="label"></label>
        <input asp-for="Code" class="form-control" required />
    </div>
    <div class="col-lg-8">
        <label asp-for="Description" class="label"></label>
        <input asp-for="Description" class="form-control" required />
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="ShortDescription" class="label"></label>
        <input asp-for="ShortDescription" class="form-control" required/>
    </div>
    <div class="col-lg-6">
        <label asp-for="CategoryId" class="label"></label>
        <select asp-for="CategoryId" class="form-control kt-select2 select2-concept-categories">
            @foreach (var item in ConstantHelpers.PayrollConcept.Category.VALUES)
            {
                <option value="@item.Key">@item.Value</option>
            }
        </select>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-4">
        <label asp-for="SunatCode" class="label"></label>
        <input asp-for="SunatCode" class="form-control"/>
    </div>
</div>