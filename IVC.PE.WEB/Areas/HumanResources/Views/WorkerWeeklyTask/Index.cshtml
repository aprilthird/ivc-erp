
@{
    ViewBag.Title = "Tareo Semanal";
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.Title
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#weekly_task_files_modal">
                        <span>
                            <i class="la la-upload"></i>
                            <span>Cargar Archivos Incidencias</span>
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="form-group row">
            <div class="col-md-12">
                <partial name="_SearchFields" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                <label class="col-form-label"><b>Autorizado por:</b></label>
                <label id="responsible_1" class="col-form-label">Responsable #1</label>
                <span id="responsible_1_auth" class="kt-badge kt-badge--danger kt-badge--inline"></span>
                <label class="col-form-label"><b> / </b></label>
                <label id="responsible_2" class="col-form-label">Responsable #2</label>
                <span id="responsible_2_auth" class="kt-badge kt-badge--danger kt-badge--inline"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <label class="col-form-label">Jefe de Frente</label>
                <select id="search_work_front_head" class="form-control kt-select2 select2-work-front-heads" required>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Cuadrillas</label>
                <select id="search_sewer_group" class="form-control kt-select2 select2-sewer-groups" required>
                </select>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover table-checkable datatable" id="weekly_task_datatable" role="grid">
            <thead>
                <tr>
                    <th rowspan="2">Trabajador</th>
                    <th rowspan="2">Nro. Doc.</th>
                    <th rowspan="2">Cuadrilla</th>
                    <th colspan="4">Lunes</th>
                    <th colspan="4">Martes</th>
                    <th colspan="4">Miercoles</th>
                    <th colspan="4">Jueves</th>
                    <th colspan="4">Viernes</th>
                    <th colspan="4">Sabado</th>
                    <th colspan="2">Domingo</th>
                    <th rowspan="2">Opciones</th>
                </tr>
                <tr>
                    <th>H.N.</th>
                    <th>H.60%</th>
                    <th>H.100%</th>
                    <th>Fase</th>
                    <th>H.N.</th>
                    <th>H.60%</th>
                    <th>H.100%</th>
                    <th>Fase</th>
                    <th>H.N.</th>
                    <th>H.60%</th>
                    <th>H.100%</th>
                    <th>Fase</th>
                    <th>H.N.</th>
                    <th>H.60%</th>
                    <th>H.100%</th>
                    <th>Fase</th>
                    <th>H.N.</th>
                    <th>H.60%</th>
                    <th>H.100%</th>
                    <th>Fase</th>
                    <th>H.N.</th>
                    <th>H.60%</th>
                    <th>H.100%</th>
                    <th>Fase</th>
                    <th>H.100%</th>
                    <th>Fase</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<partial name="_EditDtModal" />
<partial name="_EditModal" />
<partial name="_PayrollImportModal" />
<partial name="_WeeklyTaskImportModal" />
<partial name="_WeeklyTaskFilesModal" />

@section Scripts {
    <script src="~/js/areas/human-resources/worker-weekly-task/index.js"></script>
}