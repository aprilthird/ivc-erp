
@{
    ViewData["WeekTitle"] = "Boletas";
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.WeekTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        <button id="btnPrintInvoices" type="button" class="btn btn-secondary">
                            <span><i class="la la-print"></i><span>Imprimir</span></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <partial name="_SearchFields" />
        <div class="form-group row">
            <div class="col-md-12" style="text-align:right;">
                <button id="btnLoadWeek" type="button" class="btn btn-primary">
                    <span><i class="la la-refresh"></i><span>Cargar Semana</span></span>
                </button>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover table-checkable datatable" id="worker_invoices_datatable" role="grid"></table>
    </div>
</div>

@section Scripts {
    <script src="~/js/areas/human-resources/worker-invoice/index.js"></script>
}