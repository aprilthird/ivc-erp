@model WorkerDailyTaskViewModel

<input asp-for="Id" hidden />
<input asp-for="ProjectId" hidden />
<input asp-for="Date" hidden />

<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="WorkerId" class="label"></label>
        <input asp-for="WorkerId" hidden />
        <select name="select_worker" class="form-control kt-select2 select2-workers" required></select>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="ProjectPhaseId" class="label"></label>
        <select asp-for="ProjectPhaseId" class="form-control kt-select2 select2-phases"></select>
    </div>
    <div class="col-lg-6">
        <label asp-for="SewerGroupId" class="label"></label>
        <select asp-for="SewerGroupId" class="form-control kt-select2 select2-sewer-groups" required></select>
    </div>

</div>
<div class="form-group row">
    <div class="col-lg-4">
        <label asp-for="HoursNormal" class="label"></label>
        <input asp-for="HoursNormal" class="form-control" required />
    </div>
    <div class="col-lg-4">
        <label asp-for="Hours60Percent" class="label"></label>
        <input asp-for="Hours60Percent" class="form-control" required />
    </div>
    <div class="col-lg-4">
        <label asp-for="Hours100Percent" class="label"></label>
        <input asp-for="Hours100Percent" class="form-control" required />
    </div>
</div>