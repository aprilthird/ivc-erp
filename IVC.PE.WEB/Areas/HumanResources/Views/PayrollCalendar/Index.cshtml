@{
    ViewBag.Title = "RRHH";
    ViewBag.SubTitle = "Calendario Laboral";
    ViewBag.WeekTitle = "Períodos Laborables";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.HumanResources.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.SubTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#add_modal"><span><i class="la la-plus"></i><span>Nuevo Calendario</span></span></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="add_alert" class="alert alert-danger alert-dismissible fade d-none" role="alert">
        <span id="add_alert_text"></span>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="kt-portlet__body">
        <partial name="_SearchFields" />
    </div>
</div>

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.WeekTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#addweek_modal"><span><i class="la la-plus"></i><span>Nueva Semana</span></span></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <table class="table table-striped table-bordered table-hover table-checkable datatable" id="project_calendar_datatable" role="grid"></table>
    </div>
</div>

@if (canEdit)
{
    <partial name="_CreateModal" />
    <partial name="_WeekCreateModal" />
    <partial name="_WeekEditModal" />
}

@section Scripts {
    @if (canEdit)
    {
        <script src="~/js/areas/human-resources/payroll-calendar/index.js"></script>
    }
    else
    {
        <script src="~/js/areas/human-resources/payroll-calendar/index.js"></script>
    }
}