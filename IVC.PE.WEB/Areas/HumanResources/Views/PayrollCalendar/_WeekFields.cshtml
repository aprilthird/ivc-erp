@model PayrollCalendarWeekViewModel

<input asp-for="Id" hidden />
<input asp-for="ProjectCalendarId" hidden />

<div class="form-group row">
    <div class="col-lg-8">
        <label asp-for="Description" class="label"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="col-lg-4">
        <label asp-for="IsClosed" class="label"></label>
        <select asp-for="IsClosed" class="form-control">
            <option value="false">Abierta</option>
            <option value="true">Cerrada</option>
        </select>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="WeekNumber" class="label"></label>
        <input asp-for="WeekNumber" class="form-control" />
    </div>
    <div class="col-lg-6">
        <label asp-for="ProcessType" class="label"></label>
        <select asp-for="ProcessType" class="form-control">
            <option value="0">Normal</option>
            <option value="1">Gratificación</option>
            <option value="2">Reintegros</option>
        </select>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-4">
        <label asp-for="WeekStart" class="label"></label>
        <div class="input-group">
            <input asp-for="WeekStart" class="form-control datepicker" required />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <label asp-for="WeekEnd" class="label"></label>
        <div class="input-group">
            <input asp-for="WeekEnd" class="form-control datepicker" required />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <label asp-for="Month" class="label"></label>
        <select asp-for="Month" class="form-control">
            <option value="1">Enero</option>
            <option value="2">Febrero</option>
            <option value="3">Marzo</option>
            <option value="4">Abril</option>
            <option value="5">Mayo</option>
            <option value="6">Junio</option>
            <option value="7">Julio</option>
            <option value="8">Agosto</option>
            <option value="9">Setiembre</option>
            <option value="10">Octubre</option>
            <option value="11">Noviembre</option>
            <option value="12">Diciembre</option>
        </select>
    </div>
</div>