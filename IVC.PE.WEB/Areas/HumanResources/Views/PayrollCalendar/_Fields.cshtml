@model PayrollCalendarViewModel

<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="ProjectId" class="label"></label>
        <select asp-for="ProjectId" class="form-control kt-select2 select2-projects" required></select>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="Year" class="label"></label>
        <input asp-for="Year" class="form-control" value="@DateTime.Now.Year" required />
    </div>
    <div class="col-lg-6">
        <label asp-for="IsWeekly" class="label"></label>
        <select asp-for="IsWeekly" class="form-control">
            <option value="true" selected>Sí</option>
            <option value="false">No</option>
        </select>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="FirstDayOfThCalendar" class="label"></label>
        <div class="input-group">
            <input asp-for="FirstDayOfThCalendar" class="form-control datepicker" required />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>
</div> 