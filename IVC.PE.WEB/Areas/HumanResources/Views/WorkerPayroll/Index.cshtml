@{
    ViewBag.WeekTitle = "Planilla de Obreros";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.HumanResources.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.WeekTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="form-group row">
            <div class="col-md-12">
                <partial name="_SearchFields" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                <label class="col-form-label"><b>Estado de la planilla:</b></label>
                <span id="payroll_status" class="kt-badge kt-badge--secondary kt-badge--inline"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                <label class="col-form-label"><b>Autorizado por:</b></label>
                <label id="responsible" class="col-form-label">Responsable #1</label>
                <span id="responsible_auth" class="kt-badge kt-badge--danger kt-badge--inline"></span>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover table-checkable" id="worker_payroll_datatable" role="grid" width="100%"></table>
    </div>
</div>

@if (canEdit)
{
    <partial name="_ConceptModal" />
    <partial name="_ConceptEditModal" />
    <partial name="_ImportConceptModal" />
}

@section Scripts {
    <script src="~/js/areas/human-resources/worker-payroll/index.js"></script>
}