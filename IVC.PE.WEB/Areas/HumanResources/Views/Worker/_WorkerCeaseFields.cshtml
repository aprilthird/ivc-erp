@model WorkerWorkPeriodCeaseViewModel

<input asp-for="Id" hidden />
<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="EntryDate" class="label"></label>
        <div class="input-group">
            <input asp-for="EntryDate" class="form-control datepicker" />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <label asp-for="CeaseDate" class="label"></label>
        <div class="input-group">
            <input asp-for="CeaseDate" class="form-control datepicker" required />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>
</div>