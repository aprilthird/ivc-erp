                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-4">
        <label asp-for="WorkerPositionId" class="label"></label>
        <select asp-for="WorkerPositionId" class="form-control kt-select2 select2-work-positions"></select>
    </div>
    <div class="col-lg-4">
        <label asp-for="Origin" class="label"></label>
        <select asp-for="Origin" class="form-control kt-select2 select2-origins" required>
            @foreach (var item in ConstantHelpers.Worker.Origin.VALUES)
            {
                <option value="@item.Key">@item.Value</option>
            }
        </select>
    </div>
    <div class="col-lg-4">
        <label asp-for="Workgroup" class="label"></label>
        <select asp-for="Workgroup" class="form-control kt-select2 select2-workgroups" required>
            @foreach (var item in ConstantHelpers.Worker.Workgroup.VALUES)
            {
                <option value="@item.Key">@item.Value</option>
            }
        </select>
    </div>
</div>
