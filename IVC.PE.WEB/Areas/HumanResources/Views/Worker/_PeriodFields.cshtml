                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <label asp-for="Category" class="label"></label>
        <select asp-for="Category" class="form-control kt-select2 select2-categories" required>
            @foreach (var item in ConstantHelpers.Worker.Category.VALUES)
            {
                <option value="@item.Key">@item.Value</option>
            }
        </select>
    </div>
    <div class="col-lg-4">
        <label asp-for="CeaseDate" class="label"></label>
        <div class="input-group">
