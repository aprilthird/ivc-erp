
@{
    ViewBag.Title = "RACS - Gráficas y Reportes";
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title" id="datatable_portlet_title">
                Reportes
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">

                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="row">
            <div class="col-lg-3">
                <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#racs_sg_modal">
                    <span>
                        <i class="flaticon2-list"></i> Generar Excel Racs por Cuadrilla
                    </span>
                </button>
            </div>
        </div>
    </div>
</div>

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title" id="datatable_portlet_title">
                Gr&aacute;ficas
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">

                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="row">
            <div class="col-lg-12">
                <div id="scqDashboard" class="col-lg-11">
                    <div id="scqFilters"></div>
                    <div id="scqChart"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div id="saqDashboard" class="col-lg-11">
                    <div id="saqFilters"></div>
                    <div id="saqChart"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_RacsSgModal" />

@section Scripts {
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript" src="~/js/areas/security/racsreport/index.js"></script>
}
