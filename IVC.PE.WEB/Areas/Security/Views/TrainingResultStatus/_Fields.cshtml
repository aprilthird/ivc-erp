@model TrainingResultStatusViewModel

<input asp-for="Id" hidden />

<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="Name" class="label"></label>
        <input asp-for="Name" class="form-control" required />
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="Color" class="label"></label>
        <select asp-for="Color" class="form-control kt-select select2-colors">
            @foreach (var item in ConstantHelpers.Training.ResultStatusColor.VALUES)
            {
                <option value="@item.Key">@item.Value</option>
            }
        </select>
    </div>
</div>