<div class="modal fade" id="files_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-modal="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-bold text-primary" id="file_modal_title">Archivos</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <form id="file_form" class="form form-horizontal" role="form">
                <div class="modal-body">
                    <div id="files_alert" class="alert alert-danger alert-dismissible fade d-none" role="alert">
                        <span id="files_alert_text"></span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <label for="file" class="label">Archivo</label>
                            <div class="custom-file">
                                <input id="file" name="file" type="file" class="custom-file-input" />
                                <label class="custom-file-label" for="file">Escoge un archivo</label>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end mb-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="la la-upload"></i>
                            Subir
                        </button>
                    </div>
                    <table class="table table-striped table-bordered table-hover table-checkable datatable" id="files_datatable" role="grid"></table>
                </div>
            </form>
        </div>
    </div>
</div>