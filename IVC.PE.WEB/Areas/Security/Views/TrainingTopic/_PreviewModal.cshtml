<div class="modal fade" id="preview_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-modal="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-bold text-primary" id="preview_modal_title">Visualizar Archivo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <div id="preview_modal_alert" class="alert alert-danger alert-dismissible fade d-none" role="alert">
                    <span id="preview_modal_alert_text"></span>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="form-group row">
                    <div class="col-lg-12">
                        <label for="file" class="label">Archivo</label>
                        <select id="file" class="form-control select2-files"></select>
                    </div>
                </div>
                <div class="mt-3">
                    <div class="preview_container" style="width: 100%; height: 500px;">
                        <iframe id="preview_frame" class="d-none" style="width: 100%; height: 100%;"></iframe>
                        <video id="video_preview" controls class="d-none" style="width: 100%; height: 100%;">
                            <source id="video_src" src="#" type="video/mp4">
                            <source src="#" type="video/ogg">
                            Your browser does not support the video tag.
                        </video>
                        <img id="image_preview" src="#" alt="Alternate Text" class="d-none" style="width: 100%; height: 100%;" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>