@{
    ViewBag.Title = "Capacitaciones";
    ViewBag.SubTitle = "Listado de Capacitaciones";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.Security.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.SubTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <button type="button" class="btn btn-brand btn-elevate btn-icon-sm" data-toggle="modal" data-target="#add_modal">
                        <i class="la la-plus"></i>
                        Nuevo
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="form-group row">
            <div class="col-md-3">
                <label class="col-form-label">Categor&iacute;a</label>
                <select id="category_filter" class="form-control kt-select select2-categories">
                    <option>Todas</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Tema</label>
                <select id="topic_filter" class="form-control kt-select select2-topics">
                    <option>Todas</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Tutor</label>
                <select id="user_filter" class="form-control kt-select select2-users">
                    <option>Todas</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Frente</label>
                <select id="user_filter" class="form-control kt-select select2-workfronts">
                    <option>Todas</option>
                </select>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover table-checkable datatable" id="sessions_datatable" role="grid"></table>
    </div>
</div>

<partial name="_CreateModal" />
<partial name="_EditModal" />
<partial name="_DetailModal" />

@section Scripts {
    @if (canEdit)
    {
        <script src="~/js/areas/security/training-session/index.js"></script>
    }
    else
    {
        <script src="~/js/areas/security/training-session/index.js"></script>
    }
}