
@{
    ViewBag.Title = "RACS";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.LegalTechnicalLibrary.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title" id="datatable_portlet_title">
                Lista de Reportes
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#config_modal">
                        <span>
                            <i class="la la-cogs"></i>
                            <span>
                                Configuración
                            </span>
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="row">
            <h4>Cantidad de RACS: <label id="racs_total">0</label></h4>
        </div>
        <div class="form-group row">
            <div class="col-lg-2">
                <label class="label">Año</label>
                <input id="filter_year" class="form-control" value="@DateTime.Today.Year" />
            </div>
            <div class="col-lg-2">
                <label class="label">Mes</label>
                <select id="filter_month" class="form-control kt-select select2-months" data-placeholder="Meses">
                    <option selected>Todos</option>
                    @foreach (var item in ConstantHelpers.Months.VALUES)
                    {
                        <option value="@item.Key">@item.Value</option>
                    }
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-bordered table-hover table-checkable datatable" id="racs_datatable" role="grid"></table>
            </div>
        </div>
    </div>
</div>

<partial name="_ConfigModal" />
<partial name="_ConfigCreateModal" />

@section Scripts {
    <script src="~/js/areas/security/racs/index.js"></script>
}
