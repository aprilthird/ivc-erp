@{
    ViewBag.Title = "Avance Semanal";
    ViewBag.SubTitle = "Avance Semanal";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.Production.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.SubTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    @if (canEdit)
                    {
                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        <button type="button" class="btn btn-secondary" data-toggle="modal" id="btn-massive-load">
                            <span>
                                <i class="la la-file-excel-o"></i>
                                <span>Formato Carga</span>
                            </span>
                        </button>
                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#import_data_modal"><span><i class="la la-plus"></i><span>Nuevo</span></span></button>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="form-group row">
            <div class="col-md-3">
                <label class="col-form-label">Semana</label>
                <select id="calendar_filter" class="form-control kt-select2 select2-calendar-filter">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Jefe de Frente</label>
                <select id="work_front_head_filter" class="form-control kt-select2 select2-workfronthead-filter">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Cuadrilla</label>
                <select id="sewer_group_filter" class="form-control kt-select2 select2-sewergroup-filter">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Formulas</label>
                <select id="project_formula_filter" class="form-control kt-select2 select2-projectformula-filter">
                    <option>Todos</option>
                </select>
            </div>
        </div>
        <div class="tab-content">
            <div class="tab-pane active" id="tab_project" role="tabpanel">
                <table class="table table-striped table-bordered table-hover table-checkable datatable" id="weekly_advance_datatable" role="grid">
                    <thead>
                        <!--24-->
                        <tr>
                            <th rowspan="2" style="text-align:center;">Fórmula</th>
                            <th rowspan="2" style="text-align:center;">Semana</th>
                            <th rowspan="2" style="text-align:center;">Jefe de Frente</th>
                            <th rowspan="2" style="text-align:center;">Cuadrilla</th>
                            <th rowspan="2" style="text-align:center;">Presupuesto Neto Total</th>
                            <th rowspan="2" style="text-align:center;">Presupuesto Acumulado</th>
                            <th rowspan="2" style="text-align:center;">% Avance</th>
                            <th colspan="4" style="text-align:center;">Cant. Obreros</th>
                            <th colspan="5" style="text-align:center;">Venta</th>
                            <th colspan="5" style="text-align:center;">Meta</th>
                            <th colspan="5" style="text-align:center;">Costo</th>
                            <th colspan="2" style="text-align:center;">Margen</th>
                            <th rowspan="2" style="text-align:center;">Carpeta</th>
                        </tr>
                        <tr>
                            <td style="text-align:center;">OP</td>
                            <td style="text-align:center;">OF</td>
                            <td style="text-align:center;">PE</td>
                            <td style="text-align:center;">TOTAL</td>
                            <td style="text-align:center;">MO</td>
                            <td style="text-align:center;">EQ</td>
                            <td style="text-align:center;">S/C</td>
                            <td style="text-align:center;">MAT.</td>
                            <td style="text-align:center;">TOTAL</td>
                            <td style="text-align:center;">MO</td>
                            <td style="text-align:center;">EQ</td>
                            <td style="text-align:center;">S/C</td>
                            <td style="text-align:center;">MAT.</td>
                            <td style="text-align:center;">TOTAL</td>
                            <td style="text-align:center;">MO</td>
                            <td style="text-align:center;">EQ</td>
                            <td style="text-align:center;">S/C</td>
                            <td style="text-align:center;">MAT.</td>
                            <td style="text-align:center;">TOTAL</td>
                            <td style="text-align:center;">Actual</td>
                            <td style="text-align:center;">Acumulado</td>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@if (canEdit)
{
    <partial name="_ImportDataModal" />
    <partial name="_DetailModal" />
}

@section Scripts {
    @if (canEdit)
    {
        <script src="~/js/areas/production/weekly-advance/index.js"></script>
    }
    else
    {
        <script src="~/js/areas/production/weekly-advance/index.js"></script>
    }
}