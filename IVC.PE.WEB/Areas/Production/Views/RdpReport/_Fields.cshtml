@model RdpReportViewModel


@foreach (var group in ConstantHelpers.Productions.RDPs.GROUPS)
{
<div class="col-lg-12">
    <div class="row" style="border-bottom:1px solid black;">
        <div class="col-2">
            <b>@group.Value</b>
        </div>
        <div class="col-10">
            <div class="row">
                <div class="col-2">
                    <b>Actividades</b>
                </div>
                <div class="col-10">
                    <div class="row" style="text-align: end;">
                        <div class="col-3">
                            <b>Parcial</b>
                        </div>
                        <div class="col-3">
                            <b>Acumulado</b>
                        </div>
                        <div class="col-3">
                            <b>Techo</b>
                        </div>
                        <div class="col-3">
                            <b>%</b>
                        </div>
                    </div>
                </div>
            </div>

            @for (int i = 0; i < Model.RdpItems.Where(x => x.RdpItem.ItemGroup == group.Key).Count(); i++)
            {
                <div class="row">
                    <div class="col-2">
                        <label>@Model.RdpItems[i].RdpItem.ItemDescription (@Model.RdpItems[i].RdpItem.ItemUnit)</label>
                    </div>
                    <div class="col-10">
                        <div class="row" style="margin-bottom: 8px; text-align: end;">
                            <div class="col-3">
                                <input asp-for="@Model.RdpItems[i].PartialAmmount" class="form-control" style="text-align: end;" />
                            </div>
                            <div class="col-3">
                                <label>@Model.RdpItems[i].AccumulatedAmmount</label>
                            </div>
                            <div class="col-3">
                                <label>@Model.RdpItems[i].StakeOut</label>
                            </div>
                            <div class="col-3">
                                <label>%</label>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
    
</div>		 
}