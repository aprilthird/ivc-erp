
@{
    ViewBag.Title = "Programaciones";
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.Title
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#schedule_add_modal">
                            <span>
                                <i class="la la-plus"></i>
                                <span>Nuevo</span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="col-lg-12">
            <partial name="_Filters" />
        </div>
        <table class="table table-striped table-bordered table-hover table-checkable datatable" id="schedules_datatable" role="grid"></table>
    </div>
</div>

<partial name="_ScheduleCreateModal" />
<partial name="_ActivityModal" />
<partial name="_ActivityCreateModal" />
<partial name="_ActivityEditModal"/>
<partial name="_F4Modal" />
<partial name="_F56Modal" />
<partial name="_F6Modal" />

@section Scripts {
    <script src="~/js/areas/production/sewer-group-schedule/index.js"></script>
}

