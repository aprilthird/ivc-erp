@{
    ViewBag.Title = "Stock Contable";
    ViewBag.SubTitle = "Lista de Stock Contable";
    //var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.Warehouse.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.SubTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">

                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="form-group row">
            <div class="col-md-3">
                <label class="col-form-label">Familia</label>
                <select id="supply_family_filter" class="form-control kt-select2 select2-supply-families">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Grupo</label>
                <select id="supply_group_filter" class="form-control kt-select2 select2-supply-groups">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Proveedor</label>
                <select id="provider_filter" class="form-control kt-select2 select2-providers">
                    <option>Todas</option>
                </select>
            </div>
            <!--
    <div class="col-md-3">
        <label class="col-form-label" style="float:right;">Metrado</label>
        <input id="total_measure" class="form-control" style="text-align:right" disabled="disabled" />
    </div>-->
            <div class="col-md-3">
                <label class="col-form-label" style="float:right;">Stock Contable (S/)</label>
                <input id="total_curr_stock" class="form-control" style="text-align:right" disabled="disabled" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <label class="col-form-label" style="float:right;">Ingresos (S/)</label>
                <input id="total_incomes" class="form-control" style="text-align:right" disabled="disabled" />
            </div>
            <div class="col-md-3">
                <label class="col-form-label" style="float:right;">Salidas Contables (S/)</label>
                <input id="total_outputs" class="form-control" style="text-align:right" disabled="disabled" />
            </div>
            
        </div>
        <table class="table table-striped table-bordered table-hover table-checkable datatable" id="stocks_datatable" role="grid"></table>
    </div>
</div>

@section Scripts {

    <script src="~/js/areas/warehouse/current-stock/index.js"></script>

}
