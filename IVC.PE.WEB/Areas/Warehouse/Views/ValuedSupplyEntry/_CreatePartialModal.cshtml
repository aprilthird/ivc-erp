<div class="modal fade" id="partial_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-xxl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Valorización de Items</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <div id="partial_alert" class="alert alert-danger alert-dismissible fade d-none" role="alert">
                    <span id="partial_alert_text"></span>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="form-group row">
                    <div class="col-md-12">
                        <label class="col-form-label">Ingresos por Compra</label>
                        <select id="supply_entries" class="form-control kt-select2 select2-supply-entries">
                        </select>
                    </div>
                </div>

                <div class="kt-portlet__head-toolbar">
                    <div class="kt-portlet__head-wrapper">
                        <div class="kt-portlet__head-actions">
                            <button type="button" class="btn btn-secondary" data-toggle="modal" id="listItems">
                                <!-- data-target="#partial_item_modal" -->
                                <span><i class="la la-th-list"></i><span>Listar Items</span></span>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <label class="col-form-label">Año</label>
                        <select id="year_partial" class="form-control kt-select2 select2-years">
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="col-form-label">Mes</label>
                        <select id="month_partial" class="form-control kt-select2 select2-months">
                            @foreach (var item in ConstantHelpers.Months.VALUES)
                            {
                                <option value="@item.Key">@item.Value</option>
                            }
                        </select>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover table-checkable datatable" id="partial_datatable" role="grid"></table>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        <i class="la la-close"></i>
                        Cerrar
                    </button>
                    <button type="submit" class="btn btn-primary" id="partial">
                        <i class="la la-save"></i>
                        Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>