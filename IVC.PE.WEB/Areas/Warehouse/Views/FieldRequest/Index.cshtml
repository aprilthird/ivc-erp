@{
    ViewBag.Title = "Pedidos de Campo";
    ViewBag.SubTitle = "Listado de Pedidos de Campo";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.Warehouse.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.SubTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        @if (canEdit)
                        {
                            <button id="add_button" type="button" class="btn btn-secondary" data-toggle="modal">
                                <span>
                                    <i class="la la-plus"></i>
                                    <span>Nuevo</span>
                                </span>
                            </button>
                            <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#import_modal">
                                <span>
                                    <i class="la la-upload"></i>
                                    <span>Importar</span>
                                </span>
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="form-group row">
            <div class="col-md-3">
                <label class="col-form-label">Presupuesto</label>
                <select id="budget_title_filter" class="form-control kt-select2 select2-budget-titles">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Fórmula</label>
                <select id="project_formula_filter" class="form-control kt-select2 select2-project-formulas">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Frente</label>
                <select id="work_front_filter" class="form-control kt-select2 select2-work-fronts">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Cuadrilla</label>
                <select id="sewer_group_filter" class="form-control kt-select2 select2-sewer-groups">
                    <option>Todos</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <label class="col-form-label">Familia</label>
                <select id="supply_family_filter" class="form-control kt-select2 select2-supply-families">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Grupo</label>
                <select id="supply_group_filter" class="form-control kt-select2 select2-supply-groups">
                    <option>Todos</option>
                </select>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover table-checkable datatable" id="main_datatable" role="grid"></table>
    </div>
</div>

@if (canEdit)
{
    <partial name="_CreateModal" />
    <partial name="_EditModal" />
    <partial name="_DetailModal" />
    <partial name="_CreateFoldingModal" />
    <partial name="_EditFoldingModal" />
    <partial name="_ImportModal" />
}

@section Scripts {
    @if (canEdit)
    {
        <script src="~/js/areas/warehouse/field-request/index.js"></script>
    }
    else
    {
        <script src="~/js/areas/warehouse/field-request/index.js"></script>
    }
}