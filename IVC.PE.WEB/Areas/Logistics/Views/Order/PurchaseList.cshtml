@{
    ViewBag.Title = "Órdenes de Compra";
    ViewBag.SubTitle = "Listado de Órdenes de Compra";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.Logistics.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.SubTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        <a asp-action="ExportList" class="btn btn-secondary btn-export"><span><i class="la la-download"></i><span>Exportar</span></span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!---->
    <div class="kt-portlet__body">
        <div class="form-group row">
            <div class="col-md-3">
                    <label class="col-form-label">Familia</label>
                    <select id="supply_family_filter" class="form-control kt-select select2-families-filter">
                        <option>Todas</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="col-form-label">Grupo</label>
                    <select id="supply_group_filter" class="form-control kt-select select2-groups-filter">
                        <option>Todos</option>
                    </select>
                </div>

            <div class="col-md-3">
                <label class="col-form-label">Proveedor</label>
                <select id="provider_filter" class="form-control kt-select select2-providers-filter">
                    <option>Todas</option>
                </select>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover table-checkable datatable" id="main_datatable" role="grid"></table>
    


   
</div>

<partial name="_PdfModal" />
<partial name="Purchase/_EditModal" />
<partial name="_PdfLoadModal" />
<partial name="Purchase/_DetailModal" />

@section Scripts {
    @if (canEdit)
    {
        <script src="~/js/areas/logistics/order/purchase/list.js"></script>
    }
    else
    {
        <script src="~/js/areas/logistics/order/purchase/list.js"></script>
    }
}