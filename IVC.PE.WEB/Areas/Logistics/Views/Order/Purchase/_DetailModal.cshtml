@model OrderViewModel
<div class="modal fade" id="item_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-modal="true">
    <div class="modal-dialog modal-xxl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Detalles de Orden de compra</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div><div class="modal-body">
                <div id="item_alert" class="alert alert-danger alert-dismissible fade d-none" role="alert">
                    <span id="item_alert_text"></span>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <table class="table table-striped table-bordered table-hover table-checkable datatable" id="items_datatable" role="grid"></table>
                <div class="form-group row">
                    <div class="col-lg-12">
                        <label class="label"><b>Documentación requerida:</b></label>
                    </div>
                    <label class="col-lg-4">
                        <input asp-for="QualityCertificate" type="checkbox" disabled />
                        <span></span>
                        <label asp-for="QualityCertificate"></label>
                    </label>
                    <label class="col-lg-4">
                        <input asp-for="Blueprint" type="checkbox" disabled />
                        <span></span>
                        <label asp-for="Blueprint"></label>
                    </label>
                    <label class="col-lg-4">
                        <input asp-for="SecurityDocument" type="checkbox" disabled />
                        <span></span>
                        <label asp-for="SecurityDocument"></label>
                    </label>
                </div>

                <div class="form-group row">
                    <label class="checkbox col-lg-4">
                        <input asp-for="CalibrationCertificate" type="checkbox" disabled />
                        <span></span>
                        <label asp-for="CalibrationCertificate"></label>
                    </label>
                    <label class="checkbox col-lg-4">
                        <input asp-for="CatalogAndStorageCriteria" type="checkbox" disabled />
                        <span></span>
                        <label asp-for="CatalogAndStorageCriteria"></label>
                    </label>
                    <label class="checkbox col-lg-4">
                        <input asp-for="Other" type="checkbox" disabled />
                        <span></span>
                        <label asp-for="Other"></label>
                    </label>
                </div>

                <div class="form-group row">
                    <div class="col-lg-12">
                        <label asp-for="OtherDescription" class="label"></label>
                        <input asp-for="OtherDescription" class="form-control" disabled/>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="la la-close"></i>
                    Cerrar
                </button>
            </div>
        </div>
    </div>
</div>