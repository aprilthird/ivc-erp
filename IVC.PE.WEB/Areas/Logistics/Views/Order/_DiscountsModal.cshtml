@model OrderItemDiscountViewModel

<div class="modal fade" id="dis_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-l" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Descuentos Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <form id="dis_form" class="form form-horizontal" role="form" enctype="multipart/form-data">
                <div class="modal-body">
                    <div id="dis_alert" class="alert alert-danger alert-dismissible fade d-none" role="alert">
                        <span id="dis_alert_text"></span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <input asp-for="Id" hidden />
                    <div class="form-group row">
                        <div class="col-lg-6">
                            <label asp-for="FinancialDiscount" class="kt-label m-label--single"></label>
                        </div>
                        <div class="col-lg-5">
                            <input asp-for="FinancialDiscount" class="form-control" />
                        </div>
                        <div class="col-lg-1">
                            <label class="label">%</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-6">
                            <label asp-for="ItemDiscount" class="kt-label m-label--single"></label>
                        </div>
                        <div class="col-lg-5">
                            <input asp-for="ItemDiscount" class="form-control" />
                        </div>
                        <div class="col-lg-1">
                            <label class="label">%</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-6">
                            <label asp-for="AdditionalDiscount" class="kt-label m-label--single"></label>
                        </div>
                        <div class="col-lg-5">
                            <input asp-for="AdditionalDiscount" class="form-control" />
                        </div>
                        <div class="col-lg-1">
                            <label class="label">%</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-6">
                            <label asp-for="IGV" class="kt-label m-label--single"></label>
                        </div>
                        <div class="col-lg-5">
                            <input asp-for="IGV" class="form-control" />
                        </div>
                        <div class="col-lg-1">
                            <label class="label">%</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-6">
                            <label asp-for="ISC" class="kt-label m-label--single"></label>
                        </div>
                        <div class="col-lg-5">
                            <input asp-for="ISC" class="form-control" />
                        </div>
                        <div class="col-lg-1">
                            <label class="label">%</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        <i class="la la-close"></i>
                        Cerrar
                    </button>
                    <button type="submit" class="btn btn-primary" id="g_descuentos">
                            <i class="la la-save"></i>
                            Guardar
                        </button>
                </div>
            </form>
        </div>
    </div>
</div>