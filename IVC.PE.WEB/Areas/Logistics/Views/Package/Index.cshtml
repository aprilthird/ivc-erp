
@{
    ViewBag.Title = "Paqueteo";
    ViewBag.SubTitle = "Paqueteo";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.Logistics.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.SubTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        <button type="button" class="btn btn-secondary" data-toggle="modal" id="btn-refresh">
                            <span>
                                <i class="la la-refresh"></i>
                                <span>Actualizar</span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="form-group row">
            <div class="col-md-3">
                <label class="col-form-label">Familia</label>
                <select id="supply_family_filter" class="form-control kt-select2 select2-supply-familiy-filter">
                    <option>Todas</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Grupo</label>
                <select id="supply_group_filter" class="form-control kt-select2 select2-supply-group-filter">
                    <option>Todos</option>
                </select>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover table-checkable datatable" id="package_datatable" role="grid"></table>
    </div>
</div>

<partial name="_AddedSupplyDetailModal" />
<partial name="_OrderSupplyDetailModal" />
<partial name="_UsedSupplyDetailModal" />
<partial name="_VirtualOutputDetailModal" />

@section Scripts {
    <script src="~/js/areas/logistics/package/index.js"></script>
}

