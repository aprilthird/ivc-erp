@model RequestObsViewModel

<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="RequestFiles" class="label"></label>
        <div class="custom-file">
            <input asp-for="RequestFiles" multiple type="file" class="custom-file-input" />
            <label class="custom-file-label" for="customFile">Escoge un archivo</label>
        </div>
        <h6></h6>
        <h6>Archivos existentes:</h6>
        <div id="existingFiles"></div>
        <br />
        <h6>Archivos seleccionados:</h6>
        <div id="selectedFiles"></div>
    </div>
</div>

<div class="form-group row">
    <!--<div class="col-lg-12">
        <label asp-for="Observations" class="label"></label>
        <input asp-for="Observations" class="form-control" />
    </div>-->
    <div class="col-lg-12">
        <label class="label"><b>Marcar la documentación requerida al proveedor, según la necesidad del proyecto:</b></label>
    </div>
    <div class="checkbox-inline col-lg-12">
        <label class="checkbox col-lg-3">
            <input asp-for="QualityCertificate" type="checkbox" value="true" checked />
            <span></span>
            <label asp-for="QualityCertificate"></label>
        </label>
        <label class="checkbox col-lg-3">
            <input asp-for="Blueprint" type="checkbox" value="true" checked />
            <span></span>
            <label asp-for="Blueprint"></label>
        </label>
        <label class="checkbox col-lg-3">
            <input asp-for="TechnicalInformation" type="checkbox" value="true" checked />
            <span></span>
            <label asp-for="TechnicalInformation"></label>
        </label>
    </div>
    <div class="checkbox-inline col-lg-12">
        <label class="checkbox col-lg-3">
            <input asp-for="CalibrationCertificate" type="checkbox" value="true" checked />
            <span></span>
            <label asp-for="CalibrationCertificate"></label>
        </label>
        <label class="checkbox col-lg-3">
            <input asp-for="Catalog" type="checkbox" value="true" checked />
            <span></span>
            <label asp-for="Catalog"></label>
        </label>
        <label class="checkbox col-lg-3">
            <input asp-for="Other" type="checkbox" value="true" checked />
            <span></span>
            <label asp-for="Other"></label>
        </label>
    </div>
    <div class="col-lg-12">
        <label asp-for="OtherDescription" class="label"></label>
        <input asp-for="OtherDescription" class="form-control" />
    </div>
</div>
