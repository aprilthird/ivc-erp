@{
    ViewBag.Title = "Requerimientos";
    ViewBag.SubTitle = "Generación de Requerimientos";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.Logistics.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.SubTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        <!--
    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#summary_modal"><span><i class="la la-adversal"></i><span>Prefijos</span></span></button>
    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#delivery_place_modal"><span><i class="la la-map-marked"></i><span>Lugares de Entrega</span></span></button>
    -->
                        <!--<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#load_modal"><span><i class="la la-user-secret"></i><span>No Tocar</span></span></button>-->

                        <button type="button" class="btn btn-secondary btn-export"><span><i class="la la-download"></i><span>Exportar</span></span></button>
                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#option_add_modal"><span><i class="la la-plus"></i><span>Nuevo</span></span></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <table class="table table-striped table-bordered table-hover table-checkable datatable" id="requests_datatable" role="grid"></table>
    </div>
</div>

@if (canEdit)
{
    <partial name="_RequestCreateModal" />
    <partial name="_RequestEditModal" />
    <partial name="_ItemsCreateModal" />
    <partial name="_FilePdfModal" />
    <partial name="_CreateItemModal" />
    <partial name="_EditItemModal" />
    <partial name="_CreateOptionsModal" />
    <partial name="_RequestExistingCreateModal" />
    <partial name="_ImportModal" />
    <partial name="_AuxModal" />
}


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.3.1/jspdf.umd.min.js"></script>
    @if (canEdit)
    {
        <script src="~/js/areas/logistics/request/index.js"></script>
    }
    else
    {
        <script src="~/js/areas/logistics/request/index.js"></script>
    }
}