@model For47ViewModel

<div class="modal fade" id="for_47_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-modal="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">For 47</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <form id="for_47_form" class="form form-horizontal" role="form">
                <div class="modal-body">
                    <div id="for_47_alert" class="alert alert-danger alert-dismissible fade d-none" role="alert">
                        <span id="for_47_alert_text"></span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <input asp-for="Id" hidden />
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <label asp-for="ExcavationLengthPercentForNormal" class="label"></label>
                            <input asp-for="ExcavationLengthPercentForNormal" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <label asp-for="ExcavationLengthPercentForSemirocous" class="label"></label>
                            <input asp-for="ExcavationLengthPercentForSemirocous" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <label asp-for="ExcavationLengthPercentForRocky" class="label"></label>
                            <input asp-for="ExcavationLengthPercentForRocky" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        <i class="la la-close"></i>
                        Cerrar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="la la-save"></i>
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>