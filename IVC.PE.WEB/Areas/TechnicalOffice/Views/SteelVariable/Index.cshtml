@{
    ViewBag.Title = "Variables Acero";
    ViewBag.SubTitle = "Variables Acero ASTM 615 - GRADO 60";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.TechnicalOffice.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.SubTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    @if (canEdit)
                    {
                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#add_modal"><span><i class="la la-plus"></i><span>Nuevo</span></span></button>
                        <button type="button" class="btn btn-secondary" data-toggle="modal" id="btn-refresh">
                            <span>
                                <i class="la la-refresh"></i>
                                <span>Actualizar</span>
                            </span>
                        </button>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="tab-content">
            <div class="tab-pane active" id="tab_project" role="tabpanel">
                <table class="table table-striped table-bordered table-hover table-checkable datatable" id="steelvariable_datatable" role="grid">
                    <thead>
                        <tr>
                            <th colspan="3" style="text-align:center;">Insumos Venta</th>
                            <th colspan="2" style="text-align:center;">Catálogo de Insumos</th>
                            <th colspan="2" style="text-align:center;">Diámetro de Varilla</th>
                            <th rowspan="2" style="text-align:center;">Sección (mm²)</th>
                            <th rowspan="2" style="text-align:center;">Perímetro (mm)</th>
                            <th rowspan="2" style="text-align:center;">Peso Nominal (kg/m)</th>
                            <th rowspan="2" style="text-align:center;">P. U. (precio/varilla)</th>
                            <th rowspan="2" style="text-align:center;">Opciones</th>
                        </tr>
                        <tr>
                            <th>Código S10</th>
                            <th>Descripción</th>
                            <th>Precio</th>
                            <th>Código IVC</th>
                            <th>Descripción</th>
                            <th>Pulg.</th>
                            <th>mm</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@if (canEdit)
{
    <partial name="_CreateModal" />
    <partial name="_EditModal" />
}

@section Scripts {
    @if (canEdit)
    {
        <script src="~/js/areas/technical-office/steel-variable/index.js"></script>
    }
    else
    {
        <script src="~/js/areas/technical-office/steel-variable/index.js"></script>
    }
}