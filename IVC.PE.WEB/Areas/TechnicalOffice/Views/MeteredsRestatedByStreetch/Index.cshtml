@{
    ViewBag.Title = "Metrados Replanteo Por Partidas";
    ViewBag.SubTitle = "Metrados Replanteo Por Partidas";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.TechnicalOffice.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.SubTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    @if (canEdit)
                    {
                    <div class="btn-group" role="group" airal-label="Button group with nested dropdown">
                        <button type="button" class="btn btn-secondary" data-toggle="modal" id="btn-massive-load">
                            <span>
                                <i class="la la-file-excel-o"></i>
                                <span>Formato Carga Masiva</span>
                            </span>
                        </button>
                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#import_data_modal">
                            <span>
                                <i class="la la-arrow-up"></i>
                                <span>Importar Carga Masiva</span>
                            </span>
                        </button>
                        <button type="button" class="btn btn-secondary" data-toggle="modal" id="btn-delete-by-filters">
                            <span>
                                <i class="la la la-trash-o"></i>
                                <span>Borrar Por Filtro</span>
                            </span>
                        </button>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="form-group row">
            <div class="col-md-3">
                <label class="col-form-label">Títulos de Presupuestos</label>
                <select id="budget_title_filter" class="form-control kt-select2 select2-budgettitle-filter">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Fórmula</label>
                <select id="project_formula_filter" class="form-control kt-select2 select2-projectformula-filter">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Frente de Trabajo</label>
                <select id="work_front_filter" class="form-control kt-select2 select2-workfront-filter">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Cuadrilla</label>
                <select id="sewer_group_filter" class="form-control kt-select2 select2-sewergroup-filter">
                    <option>Todos</option>
                </select>
            </div>
        </div>
        <div class="tab-content">
            <div class="tab-pane active" id="tab_project" role="tabpanel">
                <table class="table table-striped table-bordered table-hover table-chekable dataTable" id="metereds_datatable" role="grid">
                   
                </table>
            </div>
        </div>
    </div>
</div>

@if (canEdit)
{
    <partial name="_CreateModal" />
    <partial name="_EditModal" />
}
<partial name="_ImportDataModal" />

@section Scripts {
    @if (canEdit)
    {
        <script src="~/js/areas/technical-office/metereds-restated-by-streetch/index.js"></script>
    }
    else
    {
        <script src="~/js/areas/technical-office/metereds-restated-by-streetch/index.js"></script>
    }
}