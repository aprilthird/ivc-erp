@model DiverseInputViewModel

<input asp-for="Id" hidden />

<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="ProjectFormulaId" class="label"></label>
        <input asp-for="ProjectFormulaId" hidden />
        <select name="select_formulas" class="form-control kt-select select2-formulas"></select>
    </div>
    <div class="col-lg-6">
        <label asp-for="BudgetTitleId" class="label"></label>
        <input asp-for="BudgetTitleId" hidden />
        <select name="select_titles" class="form-control kt-select select2-titles"></select>
    </div>
</div>

<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="WorkFrontId" class="label"></label>
        <input asp-for="WorkFrontId" hidden />
        <select name="select_work_fronts" class="form-control kt-select select2-work-fronts"></select>
    </div>
    <div class="col-lg-6">
        <label asp-for="ProjectPhaseId" class="label"></label>
        <input asp-for="ProjectPhaseId" hidden />
        <select name="select_phases" class="form-control kt-select select2-phases"></select>
    </div>
</div>

<div class="form-group row">
    <div class="col-lg-6">
        <label class="label">Familia</label>
        <select class="form-control kt-select2 select2-supply-families"></select>
    </div>
    <div class="col-lg-6">
        <label class="label">Grupo</label>
        <select class="form-control kt-select2 select2-supply-groups"></select>
    </div>
</div>

<div class="form-group row">
    <div class="col-lg-4">
        <button id="SearchSelectSupply" type="button" class="search-supply btn btn-secondary">Buscar</button>
    </div>
</div>

<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="SupplyId" class="label"></label>
        <input asp-for="SupplyId" hidden />
        <select name="select_supplies" class="form-control kt-select select2-supplies"></select>
    </div>
</div>


<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="BudgetInputId" class="label"></label>
        <input asp-for="BudgetInputId" hidden />
        <select name="select_budget_inputs" class="form-control kt-select select2-budget-inputs"></select>
    </div>
</div>

<div class=" form-group row">
    <div class="col-lg-4">
        <label asp-for="ItemNumber" class="label"></label>
        <input asp-for="ItemNumber" class="form-control" />
    </div>
    <div class="col-lg-4">
        <label asp-for="MeasurementUnitId" class="label"></label>
        <input asp-for="MeasurementUnitId" hidden />
        <select name="select_units" class="form-control kt-select select2-units">
        </select>
    </div>
    <div class="col-lg-2">
        <label asp-for="Metered" class="label"></label>
        <input asp-for="Metered" class="form-control" />
    </div>
    <div class="col-lg-2">
        <label asp-for="UnitPrice" class="label"></label>
        <input asp-for="UnitPrice" class="form-control" />
    </div>
</div>

<div class=" form-group row">
    <div class="col-lg-12">
        <label asp-for="Description" class="label"></label>
        <br>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
</div>
