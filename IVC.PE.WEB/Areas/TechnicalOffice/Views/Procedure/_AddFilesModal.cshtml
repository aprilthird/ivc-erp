@model ProcedureViewModel

<div class="modal fade" id="add_file_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-xxl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Adjuntar Archivos <br />
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <form id="add_file_form" class="form form-horizontal" role="form" enctype="multipart/form-data">
                <div class="modal-body">
                    <div id="file_alert" class="alert alert-danger alert-dismissible fade d-none" role="alert">
                        <span id="file_alert_text"></span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <label asp-for="File" class="label"></label>
                            <div class="custom-file">
                                <input asp-for="File" multiple type="file" class="custom-file-input" />
                                <label class="custom-file-label" for="File">Escoge un archivo</label>
                            </div>
                            <h6></h6>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        <i class="la la-close"></i>
                        Cerrar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="la la-save"></i>
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>