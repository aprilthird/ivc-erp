@{
    ViewBag.Title = "Planos";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.LegalTechnicalLibrary.PARTIAL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title" id="datatable_portlet_title">
                Listado de Planos
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">

                    @if (canEdit)
                    {
                        <button type="button" class="btn btn-secondary" data-toggle="modal" id="btn-massive-load">
                            <span>
                                <i class="la la-file-excel-o"></i>
                                <span>Formato Carga Masiva</span>
                            </span>
                        </button>



                        <div class="btn-group" role="group">
                            <button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="la la-arrow-up"></i>Importar
                            </button>
                            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                                <a class="dropdown-item" href="javascript;" data-toggle="modal" data-target="#import_data_modal">Datos</a>
                                <a class="dropdown-item" href="javascript;" data-toggle="modal" data-target="#import_files_modal">Archivos PDF's</a>
                            </div>
                        </div>
                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#add_modal">
                            <span>
                                <i class="la la-plus"></i><span>
                                    Nuevo
                                </span>
                            </span>
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="form-group row">
            <div class="col-md-3">
                <label class="col-form-label">Título de Presupuesto</label>
                <select id="budget_filter" class="form-control kt-select2 select2-budgets">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Fórmula</label>
                <select id="formula_filter" class="form-control kt-select2 select2-formulas2">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Frente</label>
                <select id="work_filter" class="form-control kt-select2 select2-works2">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Fase</label>
                <select id="phase_filter" class="form-control kt-select2 select2-phases_filter">
                    <option>Todos</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="col-form-label">Versión</label>
                <select id="version_filter" class="form-control kt-select2 select2-versions">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Especialidad</label>
                <select id="spec_filter" class="form-control kt-select2 select2-specs2">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Tipo de Plano</label>
                <select id="type_filter" class="form-control kt-select2 select2-types">
                    <option>Todos</option>
                </select>
            </div>

        </div>
        <div class="row">

            <div class="col-md-12">
                <table class="table table-striped table-bordered table-hover table-checkable datatable" id="iso_standard_datatable" role="grid"></table>
            </div>
        </div>
    </div>
</div>

@if (canEdit)
{
    <partial name="_CreateModal" />
    <partial name="_EditModal" />
    <partial name="_CreateFoldingModal" />
    <partial name="_EditFoldingModal" />

    <partial name="_CreateFoldingModal2" />
    <partial name="_EditFoldingModal2" />
}
<partial name="_ImportDataModal" />
<partial name="_PdfModal" />
<partial name="_ImportFilesModal" />
<partial name="_DetailModal" />
<partial name="_DetailModal2" />

@section Scripts {
    @if (canEdit)
    {
        <script src="~/js/areas/technical-office/blueprint/index.js"></script>
    }
    else
    {
        <script src="~/js/areas/technical-office/blueprint/index.js"></script>
    }
}
