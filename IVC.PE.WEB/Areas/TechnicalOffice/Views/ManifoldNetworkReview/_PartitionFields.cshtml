@model SewerBoxViewModel

<input asp-for="Id" hidden />

<div class="form-group row">
    <div class="col-lg-12">
        <label class="label">Tramo a partir:</label>
        <select asp-for="SewerManifoldToPartitionId" class="form-control kt-select select2-sm-reviews" data-placeholder="Tramos">
        </select>
    </div>
</div>

<div class="form-group row">
    <div class="col-lg-12">
        <h6>Nuevo Buzón</h6>
    </div>
    <div class="col-lg-4">
        <label asp-for="Code" class="label"></label>
        <input asp-for="Code" class="form-control" />
    </div>
    <div class="col-lg-4">
        <label asp-for="Thickness" class="label"></label>
        <input asp-for="Thickness" class="form-control" />
    </div>
    <div class="col-lg-4">
        <label asp-for="CoverLevel" class="label"></label>
        <input asp-for="CoverLevel" class="form-control" />
    </div>
    <div class="col-lg-4">
        <label asp-for="ArrivalLevel" class="label"></label>
        <input asp-for="ArrivalLevel" class="form-control" />
    </div>
    <div class="col-lg-4">
        <label asp-for="BottomLevel" class="label"></label>
        <input asp-for="BottomLevel" class="form-control" />
    </div>
    <div class="col-lg-4">
        <label asp-for="TerrainType" class="label"></label>
        <select asp-for="TerrainType" class="form-control kt-select select2-terrain-types" data-placeholder="Tipo de Terreno">
            @foreach (var item in ConstantHelpers.Terrain.Type.NAMES)
            {
                <option value="@item.Key">@item.Value</option>
            }
        </select>
    </div>
    <div class="col-lg-4">
        <label asp-for="SewerBoxType" class="label"></label>
        <select asp-for="SewerBoxType" class="form-control kt-select select2-sewerbox-types" data-placeholder="Tipo de Buzón">
            @foreach (var item in ConstantHelpers.Sewer.Box.Type.VALUES)
            {
                <option value="@item.Key">@item.Value</option>
            }
        </select>
    </div>
</div>