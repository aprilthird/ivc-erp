@{
    ViewBag.Title = "Diseños de Mezcla";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.LegalTechnicalLibrary.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title" id="datatable_portlet_title">
                Listado de Diseños de Mezcla
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    
                    @if (canEdit)
                    {
                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#add_modal">
                            <span>
                                <i class="la la-plus"></i><span>
                                    Nuevo
                                </span>
                            </span>
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="form-group row">
            <div class="col-md-3">
                <label class="col-form-label">Tipo de diseño</label>
                <select id="design_filter" class="form-control kt-select2 select2-designs">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Tipo de Cemento</label>
                <select id="type_filter" class="form-control kt-select2 select2-cements">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Tipo de Agregado</label>
                <select id="agg_filter" class="form-control kt-select2 select2-aggs">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Uso de Concreto</label>
                <select id="concrete_filter" class="form-control kt-select2 select2-concretes">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">¿Aditivo?</label>
                <select id="add_filter" class="form-control kt-select2 select2-adds">
                    <option>Todos</option>
                    <option value="false">No</option>
                    <option value="true">Sí</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="col-form-label">Versión</label>
                <select id="version_filter" class="form-control kt-select2 select2-versions">
                    <option>Todos</option>
                </select>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-bordered table-hover table-checkable datatable" id="iso_standard_datatable" role="grid"></table>
            </div>
        </div>
    </div>
</div>

@if (canEdit)
{
    <partial name="_CreateModal" />
    <partial name="_EditModal" />
}

<partial name="_PdfModal" />

@section Scripts {
    @if (canEdit)
    {
        <script src="~/js/areas/technical-office/mix-design/index.js"></script>
    }
    else
    {
        <script src="~/js/areas/technical-office/mix-design/index.js"></script>
    }
}
