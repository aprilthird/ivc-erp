@model TechnicalLibraryViewModel

<input asp-for="Id" hidden />

<div class="form-group row">

    <div class="col-lg-6">
        <label asp-for="SpecialityId" class="label"></label>
        <input asp-for="SpecialityId" hidden />

        <select name="select_spec" class="form-control kt-select select2-specs">
            <option value="">Ninguno</option>
        </select>
    </div>


    <div class="col-lg-6">
        <label asp-for="Name" class="label"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="col-lg-6">
        <label asp-for="Author" class="label"></label>
        <input asp-for="Author" class="form-control" />
    </div>
    <div class="col-lg-6">
        <label asp-for="LibraryDateStr" class="label"></label>
        <div class="input-group">
            <input asp-for="LibraryDateStr" class="form-control datepicker" required />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>

</div>

<div class="form-group">
    <label asp-for="File" class="label">Archivo:</label>
    <div class="custom-file">
        <input asp-for="File" type="file" class="custom-file-input" />
        <label class="custom-file-label" for="customFile">Escoge un archivo</label>
    </div>
</div>