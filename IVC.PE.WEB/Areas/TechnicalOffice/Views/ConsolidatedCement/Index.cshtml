@{
    ViewBag.Title = "Cemento Consolidado";
    ViewBag.SubTitle = "Cemento Consolidado";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.TechnicalOffice.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.SubTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    @if (canEdit)
                    {
                        <div class="btn-group" role="group" airal-label="Button group with nested dropdown">
                            <button type="button" class="btn btn-secondary" data-toggle="modal" id="btn-update">
                                <span>
                                    <i class="la la la-plus"></i>
                                    <span>Afectaciones</span>
                                </span>
                            </button>
                            <button type="button" class="btn btn-secondary" data-toggle="modal" id="btn-delete-by-filters">
                                <span>
                                    <i class="la la la-trash-o"></i>
                                    <span>Borrar Por Filtro</span>
                                </span>
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="form-group row">
            <div class="col-md-3">
                <label class="col-form-label">Títulos de Presupuestos</label>
                <select id="budget_title_filter" class="form-control kt-select2 select2-budgettitle-filter">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Formulas</label>
                <select id="project_formula_filter" class="form-control kt-select2 select2-projectformula-filter">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Frente de Trabajo</label>
                <select id="work_front_filter" class="form-control kt-select2 select2-workfront-filter">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Fases</label>
                <select id="project_phase_filter" class="form-control kt-select2 select2-projectphase-filter">
                    <option>Todos</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <label class="col-form-label">Metrado Contractual Tipo I (bls)</label>
                <input id="total_metered_type_one" class="form-control" style="text-align:right" disabled="disabled" />
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Metrado Contractual Tipo V (bls)</label>
                <input id="total_metered_type_five" class="form-control" style="text-align:right" disabled="disabled" />
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Metrado Replanteado Tipo I (bls)</label>
                <input id="total_restated_type_one" class="form-control" style="text-align:right" disabled="disabled" />
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Metrado Replanteado Tipo V (bls)</label>
                <input id="total_restated_type_five" class="form-control" style="text-align:right" disabled="disabled" />
            </div>
        </div>
        <div class="tab-content">
            <div class="tab-pane active" id="tab_project" role="tabpanel">
                <table class="table table-striped table-bordered table-hover table-chekable dataTable" id="cements_datatable" role="grid">
                    <thead>
                        <tr>
                            <th rowspan="2" style="text-align:center;">Frente</th>
                            <th rowspan="2" style="text-align:center;">Item</th>
                            <th rowspan="2" style="text-align:center;">Descripción</th>
                            <th rowspan="2" style="text-align:center;">Und.</th>
                            <th rowspan="2" style="text-align:center;">Metrado</th>
                            <th colspan="2" style="text-align:center;">Metrados Contractual (bls)</th>
                            <th colspan="2" style="text-align:center;">Metrados Replanteo (bls)</th>
                            <th rowspan="2" style="text-align:center;">Opciones</th>
                        </tr>
                        <tr>
                            <th>Cemento Tipo I</th>
                            <th>Cemento Tipo V</th>
                            <th>Cemento Tipo I</th>
                            <th>Cemento Tipo V</th>
                        </tr>

                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_LoadDataModal" />

@section Scripts {
    @if (canEdit)
    {
        <script src="~/js/areas/technical-office/consolidated-cement/index.js"></script>
    }
    else
    {
        <script src="~/js/areas/technical-office/consolidated-cement/index.js"></script>
    }
}