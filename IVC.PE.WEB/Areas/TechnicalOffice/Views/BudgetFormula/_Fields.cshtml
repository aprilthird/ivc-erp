@model BudgetFormulaViewModel
<input asp-for="Id" hidden />

<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="Code" class="label"></label>
        <input asp-for="Code" class="form-control" required />
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="Name" class="label"></label>
        <input asp-for="Name" class="form-control" required />
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <div class="kt-checkbox-inline">
            <label class="kt-checkbox">
                <input asp-for="IsDirectCost" type="checkbox" checked/>Costo Directo
                <span></span>
            </label>
        </div>
    </div>
</div>