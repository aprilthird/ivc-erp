@{
    ViewBag.Title = "Acero Monto Consolidado";
    ViewBag.SubTitle = "Acero Monto Consolidado";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.TechnicalOffice.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.SubTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    @if (canEdit)
                    {
                        <div class="btn-group" role="group" airal-label="Button group with nested dropdown">
                            <button type="button" class="btn btn-secondary" data-toggle="modal" id="btn-update">
                                <span>
                                    <i class="la la-refresh"></i>
                                    <span>Actualizar</span>
                                </span>
                            </button>
                            <button type="button" class="btn btn-secondary" data-toggle="modal" id="btn-delete-by-filters">
                                <span>
                                    <i class="la la la-trash-o"></i>
                                    <span>Borrar Por Filtro</span>
                                </span>
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="form-group row">
            <div class="col-md-3">
                <label class="col-form-label">Títulos de Presupuestos</label>
                <select id="budget_title_filter" class="form-control kt-select2 select2-budgettitle-filter">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Formulas</label>
                <select id="project_formula_filter" class="form-control kt-select2 select2-projectformula-filter">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Frente de Trabajo</label>
                <select id="work_front_filter" class="form-control kt-select2 select2-workfront-filter">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Fases</label>
                <select id="project_phase_filter" class="form-control kt-select2 select2-projectphase-filter">
                    <option>Todos</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label class="col-form-label" style="float:right;">Metrado Contractual (S/)</label>
                <input id="total_contractual" class="form-control" style="text-align:right" disabled="disabled" />
            </div>
            <div class="col-md-1">
                <label class="col-form-label" style="float:right;">6mm</label>
                <input id="total_rod6mm" class="form-control" style="text-align:right" disabled="disabled" />
            </div>
            <div class="col-md-1">
                <label class="col-form-label" style="float:right;">8mm</label>
                <input id="total_rod8mm" class="form-control" style="text-align:right" disabled="disabled" />
            </div>
            <div class="col-md-1">
                <label class="col-form-label" style="float:right;">3/8"</label>
                <input id="total_rod3x8" class="form-control" style="text-align:right" disabled="disabled" />
            </div>
            <div class="col-md-1">
                <label class="col-form-label" style="float:right;">1/2"</label>
                <input id="total_rod1x2" class="form-control" style="text-align:right" disabled="disabled" />
            </div>
            <div class="col-md-1">
                <label class="col-form-label" style="float:right;">5/8"</label>
                <input id="total_rod5x8" class="form-control" style="text-align:right" disabled="disabled" />
            </div>
            <div class="col-md-1">
                <label class="col-form-label" style="float:right;">3/4"</label>
                <input id="total_rod3x4" class="form-control" style="text-align:right" disabled="disabled" />
            </div>
            <div class="col-md-1">
                <label class="col-form-label" style="float:right;">1"</label>
                <input id="total_rod1" class="form-control" style="text-align:right" disabled="disabled" />
            </div>
            <div class="col-md-3">
                <label class="col-form-label" style="float:right;">Metrado Replanteo (S/)</label>
                <input id="total_replanteo" class="form-control" style="text-align:right" disabled="disabled" />
            </div>
        </div>
        <div class="tab-content">
            <div class="tab-pane active" id="tab_project" role="tabpanel">
                <table class="table table-striped table-bordered table-hover table-chekable dataTable" id="consolidatedAmountSteels_datatable" role="grid">
                    <thead>
                        <tr>
                            <th rowspan="3" style="text-align:center;">Frente</th>
                            <th rowspan="3" style="text-align:center;">Item</th>
                            <th rowspan="3" style="text-align:center;">Descripción</th>
                            <th rowspan="3" style="text-align:center;">Und.</th>
                            <th rowspan="3" style="text-align:center;">Metrado</th>
                            <th rowspan="2" style="text-align:center;">Metrado Contractual (S/)</th>
                            <th colspan="6" style="text-align:center;">MONTOS DEL REPLANTEO POR VARILLAS (S/)</th>
                            <th rowspan="3" style="text-align:center;">Metrados Replanteo (S/)</th>
                            <th rowspan="3" style="text-align:center;">Opciones</th>
                        </tr>
                        <tr>
                            <th>6mm</th>
                            <th>3/8"</th>
                            <th>1/2"</th>
                            <th>5/8"</th>
                            <th>3/4"</th>
                            <th>1"</th>
                        </tr>
                        <tr>
                            <th>2,85</th>
                            <th>5,69</th>
                            <th>14,36</th>
                            <th>25,50</th>
                            <th>39,81</th>
                            <th>57,33</th>
                            <th>101,91</th>
                        </tr>

                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_LoadDataModal" />

@section Scripts {
    @if (canEdit)
    {
        <script src="~/js/areas/technical-office/consolidated-amount-steel/index.js"></script>
    }
    else
    {
        <script src="~/js/areas/technical-office/consolidated-amount-steel/index.js"></script>
    }
}