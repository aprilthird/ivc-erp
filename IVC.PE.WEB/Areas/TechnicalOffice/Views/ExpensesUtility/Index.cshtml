@{
    ViewBag.Title = "GG + UT";
    ViewBag.SubTitle = "Gastos y Utilidades";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.TechnicalOffice.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.SubTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    @if (canEdit)
                    {
                        <div class="btn-group" role="group" airal-label="Button group with nested dropdown">
                            <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#add_modal">
                                <span>
                                    <i class="la la-plus"></i>
                                    <span>Nuevo</span>
                                </span>
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="tab-content">
            <div class="tab-pane active" id="tab_project" role="tabpanel">
                <table class="table table-striped table-bordered table-hover table-chekable dataTable" id="expenses_utility_datatable" role="grid">
                    <thead>
                        <tr>
                            <th rowspan="2" style="text-align:center;">Agrupación</th>
                            <th rowspan="2" style="text-align:center;">Tipo</th>
                            <th rowspan="2" style="text-align:center;">Titulo</th>
                            <th colspan="2" style="text-align:center;">Gasto General Fijo</th>
                            <th colspan="2" style="text-align:center;">Gasto General Variable</th>
                            <th colspan="2" style="text-align:center;">Gasto General Total</th>
                            <th rowspan="2" style="text-align:center;">Utilidad (%)</th>
                            <th rowspan="2" style="text-align:center;">Opciones</th>
                        </tr>
                        <tr>
                            <th style="text-align:center;">Monto</th>
                            <th style="text-align:center;">%</th>
                            <th style="text-align:center;">Monto</th>
                            <th style="text-align:center;">%</th>
                            <th style="text-align:center;">Monto</th>
                            <th style="text-align:center;">%</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@if (canEdit)
{
    <partial name="_CreateModal" />
    <partial name="_EditModal" />
}
<partial name="_ExcelModal" />

@section Scripts {
    @if (canEdit)
    {
        <script src="~/js/areas/technical-office/expenses-utility/index.js"></script>
    }
    else
    {
        <script src="~/js/areas/technical-office/expenses-utility/index.js"></script>
    }
}