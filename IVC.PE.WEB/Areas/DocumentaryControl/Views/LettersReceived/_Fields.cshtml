@model LetterViewModel

@Html.HiddenFor(model => model.Id)
<div class="form-group row">
    <div class="col-lg-4">
        <label asp-for="Code" class="label"></label>
        <input asp-for="Code" class="form-control" required />
    </div>
    <div class="col-lg-8">
        <label asp-for="Name" class="label"></label>
        <input asp-for="Name" class="form-control" required />
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="Subject" class="label"></label>
        <input asp-for="Subject" class="form-control" required />
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="File" class="label"></label>
        <div class="custom-file">
            <input asp-for="File" type="file" class="custom-file-input" />
            <label class="custom-file-label" for="customFile">Escoge un archivo</label>
        </div>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="ReferenceIds" class="label"></label>
        <select asp-for="ReferenceIds" class="form-control kt-select select2-letters" data-placeholder="Referencia"></select>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="Status" class="label"></label>
        <select asp-for="Status" class="form-control kt-select select2-status" required multiple data-placeholder="Características">
            @*@foreach (var item in ConstantHelpers.Letter.Status.VALUES)
            {
            <option value="@item.Key">@item.Value</option>
            }*@
        </select>
    </div>
    <div class="col-lg-6">
        <label asp-for="IssuerId" class="label">Emisor</label>
        <select asp-for="IssuerId" class="form-control kt-select select2-issuer-targets" data-placeholder="Emisor"></select>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="Date" class="label"></label>
        <div class="input-group">
            <input asp-for="Date" class="form-control datepicker" required />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <label asp-for="EmployeeId" class="label"></label>
        <select asp-for="EmployeeId" class="form-control kt-select select2-employees" data-placeholder="Encargado"></select>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="InterestGroupIds" class="label"></label>
        <select asp-for="InterestGroupIds" class="form-control kt-select select2-interest-groups" data-placeholder="Grupos de Interés"></select>
    </div>
</div>