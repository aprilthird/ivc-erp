@model LetterDocumentCharacteristicViewModel

<input asp-for="Id" hidden />

<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="Description" class="label"></label>
        <input asp-for="Description" class="form-control" required />
    </div>
    <div class="col-lg-12">
        <label asp-for="DocStyle" class="label"></label>
        <input asp-for="DocStyle" class="form-control" hidden/>
        <select name="select_style" class="form-control kt-select2 select2-styles">
            @foreach (var item in ConstantHelpers.PillStyle.VALUES)
            {
                <option value="@item.Key">@item.Value</option>
            }
        </select>
    </div>
</div>