@model InvoiceViewModel

<input asp-for="Id" hidden />

<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="Serie" class="label"></label>
        <input asp-for="Serie" class="form-control" required />
    </div>
    <div class="col-lg-6 manual">
        <label asp-for="IssueDate" class="label"></label>
        <div class="input-group">
            <input asp-for="IssueDate" class="form-control datepicker" />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>
</div>

<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="File" class="label"></label>
        <div class="custom-file">
            <input asp-for="File" type="file" class="custom-file-input" />
            <label class="custom-file-label" for="file">Escoge un archivo</label>
        </div>
    </div>
</div>
