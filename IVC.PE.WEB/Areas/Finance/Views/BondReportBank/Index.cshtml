@{
    ViewBag.Title = "Fianzas";
    ViewBag.SubTitle = "Reporte por Entidad Financiera";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.Finance.FULL_ACCESS);
}

    <div class="kt-portlet kt-portlet--tabs">
        <div class="kt-portlet__head">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="flaticon-list-2"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    @ViewBag.SubTitle
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <div class="kt-portlet__head-actions">
                        @if (canEdit)
                        {
                            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#add_modal"><span><i class="la la-plus"></i><span>Crear Reporte</span></span></button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="kt-portlet__body">
            <div class="form-group row">
                <div class="col-md-3">
                    <label class="col-form-label">Entidades Financieras</label>
                    <select id="supply_family_filter" class="form-control kt-select2 select2-banks">
                        <option>Todas</option>
                    </select>

                    <form class="form-inline">
                        <div class="custom-control custom-checkbox my-1 mr-sm-2">
                            <input type="checkbox" class="custom-control-input" id="inlineCheckbox1">
                            <label class="custom-control-label" for="inlineCheckbox1">Activo</label>
                        </div>

                        <div class="custom-control custom-checkbox my-1 mr-sm-2">
                            <input type="checkbox" class="custom-control-input" id="inlineCheckbox2">
                            <label class="custom-control-label" for="inlineCheckbox2">Vencido</label>
                        </div>

                        <div class="custom-control custom-checkbox my-1 mr-sm-2">
                            <input type="checkbox" class="custom-control-input" id="inlineCheckbox3">
                            <label class="custom-control-label" for="inlineCheckbox3">Por Vencer</label>
                        </div>

                    </form>
                </div>
            </div>
            
            <table class="table table-striped table-bordered table-hover table-checkable datatable" id="main_datatable" role="grid"></table>
        </div>
</div>

@if (canEdit)
{
    <partial name="_CreateModal" />
    <partial name="_EditModal" />
    <partial name="_CreateFileModal" />
    <partial name="_ImportModal" />
}

<partial name="_PdfModal" />
@section Scripts {
    @if (canEdit)
    {
        <script src="~/js/areas/finance/bondreportbank/index.js"></script>
    }
    else
    {
        <script src="~/js/areas/finance/bondreportbank/readonly-index.js"></script>
    }
}