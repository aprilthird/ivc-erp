@model IVC.PE.WEB.Areas.Finance.ViewModels.BondReportViewModel.BondReportViewModel
<input asp-for="Id" hidden />

<div class="form-group row">

    <div class="col-lg-12">
        <label class="label">Agrupado por</label>

        <div class="form-check">
            <input asp-for="AgrupedBy" class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
            <label class="form-check-label" for="exampleRadios1">
                Centro de costo
            </label>
        </div>
        <div class="form-check">
            <input asp-for="AgrupedBy" class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
            <label class="form-check-label" for="exampleRadios2">
                Entidad Financiera
            </label>
        </div>

    </div>
    <div class="col-lg-12">
        <label asp-for="ProjectId" class="label"></label>
        <select asp-for="ProjectId" class="form-control kt-select select2-projects" data-placeholder="Centro de Costo"></select>
    </div>


    <div class="col-lg-12">
        <label asp-for="BankId" class="label"></label>
        <select asp-for="BankId" class="form-control kt-select select2-banks" data-placeholder="Entidad Financiera"></select>
    </div>

    <div class="col-lg-12">
        <div class="form-check form-check-inline">
            <input asp-for="ExpiresInFewDays" class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
            <label asp-for="ExpiresInFewDays" class="form-check-label" for="inlineCheckbox1">Por Vencer</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="IsActive" class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
            <label asp-for="IsActive" class="form-check-label" for="inlineCheckbox2">Activas</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="ClosedWithBonds" class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3" disabled>
            <label asp-for="ClosedWithBonds" class="form-check-label" for="inlineCheckbox3">Cerradas con garantias por liberar</label>
        </div>
        </div>


    </div>
    <div class="form-group row">


    </div>
