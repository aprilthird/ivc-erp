@model BondRenovationViewModel
<input asp-for="Id" hidden />
<input asp-for="BondAddId" hidden />
<input asp-for="BondRenovationId" hidden />
<div class="form-group row">

    <div class="col-lg-12">
        <label asp-for="Responsibles" class="label" hidden></label>
        <input asp-for="Responsibles" hidden />
        @*<select name="select_users" class="form-control kt-select select2-users" multiple data-placeholder="Encargado"></select>*@
    </div>

    <div class="col-lg-12">
        <label asp-for="BondName" class="label"></label>
        <input asp-for="BondName" class="form-control" required />
        @*<select name="select_users" class="form-control kt-select select2-users" multiple data-placeholder="Encargado"></select>*@
    </div>

    <div class="col-lg-8">
        <label asp-for="PenAmmount" class="label"></label>
        <input asp-for="PenAmmount" class="form-control" required />
    </div>

    <div class="col-lg-4">
        <label asp-for="currencyType" class="label"></label>
        <input asp-for="currencyType" hidden />
        <select name="select_currencytype" class="form-control kt-select select2-currencies" data-placeholder="Tipo de Moneda" required></select>
    </div>

    <div class="col-lg-8">
        <label asp-for="IssueCost" class="label"></label>
        <input asp-for="IssueCost" class="form-control"/>
    </div>

    <div class="col-lg-12">
        <label asp-for="IssueFile" class="label"></label>
        <div class="custom-file">
            <input asp-for="IssueFile" type="file" class="custom-file-input" />
            <label class="custom-file-label" for="customFile">Escoge un archivo</label>
        </div>
    </div>

    <div class="col-lg-6">
        <label asp-for="CreateDate" class="label"></label>
        <div class="input-group">
            <input asp-for="CreateDate" class="form-control datepicker" required />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <label asp-for="EndDate" class="label"></label>
        <div class="input-group">
            <input asp-for="EndDate" class="form-control datepicker" required />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <label asp-for="guaranteeDesc" class="label"></label>
        <input asp-for="guaranteeDesc" class="form-control" />
    </div>

    <div class="col-lg-4">
        <label asp-for="IsTheLast" class="label"></label>
        <input asp-for="IsTheLast" hidden />
        <select name="select_isthelast" class="form-control kt-select select2-isthelast" required>
            <option value="false" selected>No</option>
            <option value="true">Sí</option>
        </select>
    </div>

    <div class="col-lg-12">
        <label asp-for="File" class="label"></label>
        <div class="custom-file">
            <input asp-for="File" type="file" class="custom-file-input" />
            <label class="custom-file-label" for="customFile">Escoge un archivo</label>
        </div>
    </div>

</div>