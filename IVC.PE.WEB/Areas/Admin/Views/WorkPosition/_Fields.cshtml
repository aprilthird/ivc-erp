@model WorkPositionViewModel

<input asp-for="Id" hidden />

<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="Name" class="label"></label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="col-lg-6">
        <label asp-for="Type" class="label"></label>
        <select asp-for="Type" class="form-control kt-select2 select2-work-areas">
            @foreach (var item in ConstantHelpers.WorkPositions.Type.VALUES)
            {
                <option value="@item.Key">@item.Value</option>
            }
        </select>
    </div>
</div>