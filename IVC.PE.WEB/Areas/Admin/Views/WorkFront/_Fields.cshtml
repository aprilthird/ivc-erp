@model WorkFrontViewModel

<input asp-for="Id" hidden />

<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="Code" class="label"></label>
        <input asp-for="Code" class="form-control" required />
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="FormulaIds" class="label"></label>
        <select asp-for="FormulaIds" multiple class="form-control kt-select2 select2-formulas" required data-placeholder="Formulas"></select>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="ProjectPhaseIds" class="label"></label>
        <select asp-for="ProjectPhaseIds" multiple class="form-control kt-select2 select2-project-phases" required data-placeholder="Fases"></select>
    </div>
</div>