@model UserViewModel

<input asp-for="Id" hidden />

<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="Name" class="label"></label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="col-lg-6">
        <label asp-for="MiddleName" class="label"></label>
        <input asp-for="MiddleName" class="form-control" />
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="PaternalSurname" class="label"></label>
        <input asp-for="PaternalSurname" class="form-control" required />
    </div>
    <div class="col-lg-6">
        <label asp-for="MaternalSurname" class="label"></label>
        <input asp-for="MaternalSurname" class="form-control" required />
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="PhoneNumber" class="label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="col-lg-6">
        <label asp-for="Email" class="label"></label>
        <input asp-for="Email" class="form-control" required />
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="Password" class="label"></label>
        <input asp-for="Password" class="form-control" required autocomplete="new-password" />
    </div>
    <div class="col-lg-6">
        <label asp-for="RepeatPassword" class="label"></label>
        <input asp-for="RepeatPassword" class="form-control" required />
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="WorkAreaId" class="label"></label>
        <input asp-for="WorkAreaId" hidden />
        <select name="select_work_area" class="form-control kt-select2 select2-work-areas">
            <!--
            @foreach(var item in ConstantHelpers.Employee.WorkArea.VALUES)
            {
            <option value="@item.Key">@item.Value</option>
            }-->
        </select>
    </div>
    <div class="col-lg-6">
        <label asp-for="WorkPositionId" class="label"></label>
        <input asp-for="WorkPositionId" hidden />
        <select name="select_work_position" class="form-control kt-select2 select2-work-positions"></select>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="WorkRoleId" class="label"></label>
        <select asp-for="WorkRoleId" class="form-control kt-select2 select2-work-roles" data-placeholder="Roles de Trabajo"></select>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="RoleIds" class="label"></label>
        <select asp-for="RoleIds" class="form-control kt-select2 select2-roles" multiple data-placeholder="Roles">
        </select>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="ProjectIds" class="label"></label>
        <select asp-for="ProjectIds" class="form-control kt-select2 select2-projects" required multiple data-placeholder="Proyectos">
        </select>
    </div>
</div>

<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="SignatureFile" class="label"></label>
        <div class="custom-file">
            <input asp-for="SignatureFile" type="file" class="custom-file-input" />
            <label class="custom-file-label" for="customFile">Escoge un archivo</label>
        </div>
    </div>
</div>