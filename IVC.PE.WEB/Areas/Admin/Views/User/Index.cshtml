
@{
    ViewBag.Title = "Usuarios";
    ViewBag.SubTitle = "Listado de Usuarios";
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.SubTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#import_modal">
                            <span>
                                <i class="la la-upload"></i>
                                <span>Importar</span>
                            </span>
                        </button>
                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#add_modal"><span><i class="la la-plus"></i><span>Nuevo</span></span></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="form-group row">
            <div class="col-md-3">
                <label class="col-form-label">Roles</label>
                <select id="role_filter" class="form-control kt-select2 select2-roles">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Áreas de Trabajo</label>
                <select id="work_area_filter" class="form-control kt-select2 select2-work-areas">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Cargo en Obra</label>
                <select id="work_position_filter" class="form-control kt-select2 select2-work-positions">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Proyectos</label>
                <select id="project_filter" class="form-control kt-select2 select2-projects">
                    <option >Todos</option>
                </select>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover table-checkable datatable" id="user_datatable" role="grid"></table>
    </div>
</div>

<partial name="_CreateModal" />
<partial name="_EditModal" />
<partial name="_ImportModal" />
<partial name="_PdfModal" />

@section Scripts {
    <script src="~/js/areas/admin/user/index.js"></script>
}