@model ProjectPhaseViewModel

<input asp-for="Id" hidden />

<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="ProjectFormulaId" class="label"></label>
        <select asp-for="ProjectFormulaId" class="form-control kt-select2 select2-formulas" data-placeholder="Formulas"></select>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="Code" class="label"></label>
        <input asp-for="Code" class="form-control" required />
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="Description" class="label"></label>
        <input asp-for="Description" class="form-control" required />
    </div>
</div>