
@{
    ViewBag.Title = "Cuadrillas";
    ViewBag.SubTitle = "Listado de Cuadrillas";
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.SubTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#import_modal">
                            <span>
                                <i class="la la-upload"></i>
                                <span>Importar</span>
                            </span>
                        </button>
                        <button type="button" class="btn btn-secondary btn-export"><span><i class="la la-download"></i><span>Exportar</span></span></button>
                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#add_modal"><span><i class="la la-plus"></i><span>Nuevo</span></span></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="form-group row">
            <div class="col-md-3">
                <label class="col-form-label">Componente de Obra</label>
                <select id="work_component_filter" class="form-control kt-select select2-work-components">
                    <option>Todos</option>
                    @foreach (var item in ConstantHelpers.Sewer.Group.WorkComponent.VALUES)
                    {
                        <option value="@item.Key">@item.Value</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Estructura</label>
                <select id="work_structure_filter" class="form-control kt-select2 select2-work-structures">
                    <option>Todas</option>
                    @foreach (var item in ConstantHelpers.Sewer.Group.WorkStructure.VALUES)
                    {
                        <option value="@item.Key">@item.Value</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Grupo de Destino</label>
                <select id="destination_filter" class="form-control kt-select2 select2-destinations">
                    <option>Todos</option>
                    @foreach (var item in ConstantHelpers.Sewer.Group.Destination.VALUES)
                    {
                        <option value="@item.Key">@item.Value</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Estado</label>
                <select id="active_filter" class="form-control kt-select2 select2-actives">
                    <option>Todos</option>
                    <option value="ac">Activos</option>
                    <option value="in">Inactivos</option>
                </select>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover table-checkable datatable" id="sewer_group_datatable" role="grid"></table>
    </div>
</div>

<partial name="_CreateModal" />
<partial name="_EditModal" />
<partial name="_ImportModal" />
<partial name="_HabilitationModal" />
<partial name="_HabilitationCreateModal" />
<partial name="_PeriodModal" />
<partial name="_PeriodCreateModal" />

@section Scripts {
    <script src="~/js/areas/admin/sewer-group/index.js"></script>
}