@model MenuSelectorViewModel

@for (var i = 0; i < Model.Areas.Count(); ++i)
{
    <input asp-for="@Model.Areas[i].Name" hidden />
    <div class="d-flex align-items-end mb-3">
        <input asp-for="@Model.Areas[i].IsChecked" class="form-control kt-checkbox--primary" style="width: 3%;" />
        <h3 class="ml-2">@Model.Areas[i].Name</h3>
        <select class="form-control ml-2" style="width: 20%;">
            <option value="0">Ver</option>
            <option value="1">Modificar</option>
        </select>
    </div>
    @if (Model.Areas[i].Items.Any())
    {
        @for (var j = 0; j < Model.Areas[i].Items.Count(); ++j)
        {
            <div class="d-flex align-items-end ml-2 mb-3">
                <input type="hidden" asp-for="@Model.Areas[i].Items[j].Id" />
                <input asp-for="@Model.Areas[i].Items[j].IsChecked" class="form-control kt-checkbox--primary" style="width: 3%;" />
                <p class="ml-2">@Model.Areas[i].Items[j].Name</p>
                <select class="form-control ml-2" asp-for="@Model.Areas[i].Items[j].PermissionLevel" style="width: 20%;">
                    <option value="0">Ver</option><option value="1">Modificar</option>
                </select>
            </div>

            @if (Model.Areas[i].Items[j].Items.Any())
            {
                for (var k = 0; k < Model.Areas[i].Items[j].Items.Count(); ++k)
                {
                    <div class="d-flex align-items-end ml-4 mb-3">
                        <input type="hidden" asp-for="@Model.Areas[i].Items[j].Items[k].Id" />
                        <input asp-for="@Model.Areas[i].Items[j].Items[k].IsChecked" class="form-control kt-checkbox--primary" style="width: 3%;" />
                        <p class="ml-2">@Model.Areas[i].Items[j].Items[k].Name</p>
                        <select class="form-control ml-2" asp-for="@Model.Areas[i].Items[j].Items[k].PermissionLevel" style="width: 20%;">
                            <option value="0">Ver</option><option value="1">Modificar</option>
                        </select>
                    </div>

                    @if (Model.Areas[i].Items[j].Items[k].Items.Any())
                    {
                        for (var l = 0; l < Model.Areas[i].Items[j].Items[k].Items.Count(); ++l)
                        {
                            <div class="d-flex align-items-end ml-5 mb-3">
                                <input type="hidden" asp-for="@Model.Areas[i].Items[j].Items[k].Items[l].Id" />
                                <input asp-for="@Model.Areas[i].Items[j].Items[k].Items[l].IsChecked" class="form-control kt-checkbox--primary" style="width: 3%;" />
                                <p class="ml-2">@Model.Areas[i].Items[j].Items[k].Items[l].Name</p>
                                <select class="form-control ml-2" asp-for="@Model.Areas[i].Items[j].Items[k].Items[l].PermissionLevel" style="width: 20%;">
                                    <option value="0">Ver</option><option value="1">Modificar</option>
                                </select>
                            </div>
                        }
                    }
                }
            }
        }
    }
    else
    {
        <p>No existen elementos asignados a esta &aacute;rea.</p>
    }
}
