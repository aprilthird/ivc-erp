@model InterestGroupViewModel

@Html.HiddenFor(model => model.Id)
<div class="form-group row">
    <div class="col-lg-4">
        <label asp-for="Code" class="label"></label>
        <input asp-for="Code" class="form-control" required />
    </div>
    <div class="col-lg-8">
        <label asp-for="Name" class="label"></label>
        <input asp-for="Name" class="form-control" required />
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="ProjectId" class="label"></label>
        <select asp-for="ProjectId" class="form-control kt-select2 select2-projects" required data-placeholder="Proyecto"></select>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="UserIds" class="label"></label>
        <select asp-for="UserIds" class="form-control kt-select2 select2-users" multiple data-placeholder="Usuarios"></select>
    </div>
</div>