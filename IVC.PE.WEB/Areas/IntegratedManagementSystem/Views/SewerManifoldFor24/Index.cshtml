@{
    ViewBag.Title = "For-11";
    ViewBag.SubTitle = "Consolidado de Salida No Conforme";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.IntegratedManagementSystem.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="flaticon-list-2"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                @ViewBag.SubTitle
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="kt-portlet__head-actions">
                    @if (canEdit)
                    {
                        <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                            <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#add_first_modal"><span><i class="la la-plus"></i><span>Nuevo For-24</span></span></button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="tab-content">
            <div class="tab-pane active" id="tab_project" role="tabpanel">
                <table class="table table-striped table-bordered table-hover table-checkable datatable" id="for24s_datatable" role="grid">
                    <thead>
                        <!--24-->
                        <tr>
                            <td style="text-align:center;">Proceso Observado</td>
                            <td style="text-align:center;">SNC N°</td>
                            <td style="text-align:center;">Fecha_Reporte</td>
                            <td style="text-align:center;">Reportado por</td>
                            <td style="text-align:center;">Origen del P/S NC</td>
                            <td style="text-align:center;">Nombre del C, P o PI</td>
                            <td style="text-align:center;">Descripción del Hallazgo</td>
                            <td style="text-align:center;">Responsable en Levantar</td>
                            <td style="text-align:center;">Video</td>
                            <td style="text-align:center;">Opciones</td>
                            <td style="text-align:center;">Decisión dobre el P/S no conforme</td>
                            <td style="text-align:center;">Acciones tomadas</td>
                            <td style="text-align:center;">Equipos Usados</td>
                            <td style="text-align:center;">Fecha Propuesta</td>
                            <td style="text-align:center;">Video</td>
                            <td style="text-align:center;">Opciones</td>
                            <td style="text-align:center;">Verificación Acciones Tomadas</td>
                            <td style="text-align:center;">Acción Preventiva</td>
                            <td style="text-align:center;">Opciones</td>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@if (canEdit)
{
    <partial name="_CreateFirstModal" />
    <partial name="_CreateSecondModal" />
    <partial name="_CreateThirdModal" />
    <partial name="_CreateActionModal" />
    <partial name="_CreateEquipmentModal" />
}
<partial name="_ActionDetails" />
<partial name="_EquipmentDetails" />
<partial name="_PdfModal" />
<partial name="_GalleryModal" />
<partial name="_VideoModal" />

@section Scripts {
    @if (canEdit)
    {
        <script src="~/js/areas/integrated-management-system/sewer-manifold-for11/index.js"></script>
    }
    else
    {
<script src="~/js/areas/integrated-management-system/sewer-manifold-for11/index.js"></script>
    }
}
