@{
    ViewBag.Title = "Equipo Transporte";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.EquipmentMachinery.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title" id="datatable_portlet_title">
                Listado de Equipos Transporte
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">

                    @if (canEdit)
                    {


                        <button type="button" class="btn btn-secondary" data-toggle="modal" id="btn-massive-load">
                            <span>
                                <i class="la la-file-excel-o"></i>
                                <span>Formato Carga Masiva</span>
                            </span>
                        </button>

                        <div class="btn-group" role="group">
                            <button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="la la-arrow-up"></i>Importar
                            </button>
                            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                                <a class="dropdown-item" href="javascript;" data-toggle="modal" data-target="#import_data_modal">Datos</a>
                            </div>
                        </div>
                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#add_modal">
                            <span>
                                <i class="la la-plus"></i><span>
                                    Nuevo
                                </span>
                            </span>
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="form-group row">
            @*<div class="col-md-3">
                    <label class="col-form-label">Proyecto</label>
                    <select id="project_filter" class="form-control kt-select2 select2-projects">
                        <option>Todos</option>
                    </select>
                </div>*@
            <div class="col-md-3">
                <label class="col-form-label">Tipo de Equipo Transporte</label>
                <select id="soft_filter" class="form-control kt-select2 select2-softs2">
                    <option>Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="col-form-label">Proveedor</label>
                <select id="provider_filter" class="form-control kt-select2 select2-providers2">
                    <option>Todos</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_project" role="tabpanel">
                        <table class="table table-striped table-bordered table-hover table-checkable datatable" id="main_datatable" role="grid">
                            <thead>
                                <tr>
                                    <th rowspan="2" style="text-align: center;">Proveedor</th>
                                    <th rowspan="2" style="text-align: center;">Equipo Transporte</th>
                                    <th rowspan="2" style="text-align: center;">Marca</th>
                                    <th rowspan="2" style="text-align: center;">Modelo</th>
                                    <th rowspan="2" style="text-align: center;">Año</th>
                                    <th rowspan="2" style="text-align: center;">Placa</th>
                                    <th rowspan="2" style="text-align: center;"># serie</th>
                                    <th rowspan="2" style="text-align: center;">Fecha de Inicio</th>


                                    <th rowspan="2" style="text-align: center;">Estado</th>

                                    <th rowspan="2" style="text-align: center;">Kilometraje Inicial</th>
                                    <th rowspan="2" style="text-align: center;">Kilometraje Final</th>
                                    <th rowspan="2" style="text-align: center;">Diferencia</th>

                                    <th rowspan="2" style="text-align: center;">Condicion de servicio</th>
                                    <th rowspan="2" style="text-align: center;">Precio unitario</th>
                                    <th colspan="6" style="text-align: center;">Poliza de Seguro</th>
                                    <th colspan="4" style="text-align: center;">Seguro SOAT</th>
                                    <th colspan="4" style="text-align: center;">Revisión Técnica</th>
                                    <th rowspan="2" style="text-align: center;">QR</th>
                                    <th rowspan="2" style="text-align: center;">Opciones</th>

                                </tr>


                                <tr>
                                    <th colspan="1" style="text-align: center;">Nombre de Aseguradora</th>
                                    <th colspan="1" style="text-align: center;">N° de Aseguradora</th>
                                    <th colspan="1" style="text-align: center;">Inicio Poliza</th>
                                    <th colspan="1" style="text-align: center;">Fin Poliza</th>
                                    <th colspan="1" style="text-align: center;">Vigencia Poliza</th>
                                    <th colspan="1" style="text-align: center;">Opciones</th>



                                    <th colspan="1" style="text-align: center;">Inicio SOAT</th>
                                    <th colspan="1" style="text-align: center;">Fin SOAT</th>
                                    <th colspan="1" style="text-align: center;">Vigencia SOAT</th>
                                    <th colspan="1" style="text-align: center;">Opciones</th>

                                    <th colspan="1" style="text-align: center;">Inicio R.T.</th>
                                    <th colspan="1" style="text-align: center;">Fin R.T.</th>
                                    <th colspan="1" style="text-align: center;">Vigencia de R.T.</th>
                                    <th colspan="1" style="text-align: center;">Opciones</th>


                                </tr>

                            </thead>
                        </table>
                    </div>
                </div>
    </div>
</div>
    </div>
</div>

