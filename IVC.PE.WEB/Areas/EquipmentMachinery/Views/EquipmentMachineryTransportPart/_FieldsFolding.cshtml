@model EquipmentMachineryTransportPartFoldingViewModel

<input asp-for="Id" hidden />

<input asp-for="EquipmentMachineryTransportPartId" class="fatherid" hidden/>



<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="EquipmentMachineryOperatorId" class="label"></label>
        <input asp-for="EquipmentMachineryOperatorId" hidden />
        <select name="select_operator" class="form-control kt-select select2-operators" data-placeholder="Operador">
        </select>
    </div>
    <div class="col-lg-6 worker_group">
        <label asp-for="UserId" class="label"></label>
        <input asp-for="UserId" hidden />
        <select name="select_user" class="form-control kt-select select2-users" data-placeholder="Asignado/Encargado">
        </select>
    </div>

    <div class="col-lg-12">
        <label asp-for="PartNumber" class="label"></label>
        <input asp-for="PartNumber" class="form-control" />
    </div>

    <div class="col-lg-6">
        <label asp-for="PartDate" class="label"></label>
        <div class="input-group">
            <input asp-for="PartDate" class="form-control datepicker" required />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <label class="label"> Domingos</label>
        <br />>
        <button id="SearchSelect" type="button" class="search-select btn btn-secondary">Buscar</button>
    </div>

</div>
<div class="form-group row">
    <div class="col-lg-4">
        <label asp-for="InitMileage" class="label"></label>
        <input asp-for="InitMileage" class="form-control" />
    </div>
    <div class="col-lg-4">
        <label asp-for="EndMileage" class="label"></label>
        <input asp-for="EndMileage" class="form-control" />
    </div>

    <div class="col-lg-4">
        <label asp-for="TransportPhaseId" class="label"></label>
        <input asp-for="TransportPhaseId" hidden />
        <select name="select_phase" class="form-control kt-select select2-phases" data-placeholder="Fase">
        </select>
    </div>

    <div class="col-lg-12">
        <label asp-for="EquipmentMachineryTypeTransportActivities" class="label"></label>
        <select asp-for="EquipmentMachineryTypeTransportActivities" class="select2-activities" multiple style="visibility: hidden;" />
        <select name="select_activities" class="form-control kt-select2 select2-activities" multiple data-placeholder="Actividad"></select>
    </div>
</div>



