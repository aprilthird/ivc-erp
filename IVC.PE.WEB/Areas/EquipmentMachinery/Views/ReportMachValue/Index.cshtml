@{
    ViewBag.Title = "Reportes de Equipos Maquinaria";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.EquipmentMachinery.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title" id="datatable_portlet_title">
                Listado de Reportes de Equipos Maquinaria
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="form-group row">

            <div class="col-md-2">
                <label class="col-form-label">Año</label>
                <select id="year_param" name="select_year_param" class="form-control kt-select select2-years" data-placeholder="Mes Folding">
                    <option>Todos</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="col-form-label">Mes</label>
                <select id="month_param" name="select_month_param" class="form-control kt-select select2-month_params" data-placeholder="Mes">
                    @foreach (var item in ConstantHelpers.EquipmentMachinery.EquipmentMachineryOperator.MONTH_VALUE)
                    {
                        <option value="@item.Key">@item.Value</option>
                    }
                </select>
            </div>

            <div class="col-md-4">
                <label class="col-form-label">Semana</label>
                <select id="week_param" name="select_week_param" class="form-control kt-select select2-weeks" data-placeholder="Semana">
                </select>
            </div>

            <div class="col-md-3">
                <label class="col-form-label">Proveedor</label>
                <select id="provider_param" class="form-control kt-select2 select2-providers">
                    <option> Todos </option>
                </select>
            </div>

            @*<div class="col-md-3">
            <label class="col-form-label">Proyecto</label>
            <select id="project_filter" class="form-control kt-select2 select2-projects">
                <option>Todos</option>
            </select>
        </div>*@



        </div>

        
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-bordered table-hover table-checkable datatable" id="main_datatable" role="grid"></table>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @if (canEdit)
    {
        <script src="~/js/areas/equipment-machinery/report-mach/index.js"></script>
    }
    else
    {
        <script src="~/js/areas/equipment-machinery/report-mach/index.js"></script>
    }
}
