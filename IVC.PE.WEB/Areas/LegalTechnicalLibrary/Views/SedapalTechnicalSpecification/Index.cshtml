@{
    ViewBag.Title = "Espec. Técnicas de SEDAPAL";
    var canEdit = User.IsInAnyRole(ConstantHelpers.Permission.LegalTechnicalLibrary.FULL_ACCESS);
}

<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                Lista de Archivos
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <button type="button" class="btn btn-secondary btn-export"><span><i class="la la-download"></i><span>Exportar</span></span></button>
                    @if (canEdit)
                    {
                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#add_modal">
                            <span>
                                <i class="la la-plus"></i><span>
                                    Nuevo
                                </span>
                            </span>
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-bordered table-hover table-checkable datatable" id="technical_library_datatable" role="grid"></table>
            </div>
        </div>
    </div>
</div>

@if (canEdit)
{
    <partial name="_CreateModal" />
    <partial name="_EditModal" />
}

<partial name="_PdfModal" />

@section Scripts {
    @if (canEdit)
    {
        <script src="~/js/areas/legal-technical-library/technical-library/sedapal-technical-specifications/index.js"></script>
    }
    else
    {
        <script src="~/js/areas/legal-technical-library/technical-library/sedapal-technical-specifications/readonly-index.js"></script>
    }
}
