@model IEnumerable<SupplierViewModel>

@if (Model.Any())
{
    int total = Model.Count();

    for (int i = 0; i < total; i++)
    {
    <div class="kt-grid-nav__row">

        @for (int j = i; j < total; j++)
        {
            if (j % 3 == 0 && j != i)
            {
                i = j;
                break;
            }
            <a asp-controller="SupplierCatalog" asp-action="Index" asp-route-supplierGuid="@Model.ElementAt(j).Id" class="kt-grid-nav__item">
                <span class="kt-grid-nav__icon">
                    <i class="fa fa-folder"></i>
                </span>
                <span class="kt-grid-nav__title">@Model.ElementAt(j).BusinessName - @Model.ElementAt(j).RUC</span>
                <span class="kt-grid-nav__desc">Nro. Archivos: @Model.ElementAt(j).FileCount</span>
            </a>
        }

    </div>
        }
    }