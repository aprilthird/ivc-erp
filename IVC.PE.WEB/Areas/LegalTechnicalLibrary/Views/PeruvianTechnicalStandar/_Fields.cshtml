@model PeruvianTechnicalStandarsViewModel

@Html.HiddenFor(model => model.Id)
<input asp-for="FileType" hidden value="@ConstantHelpers.TechnicalLibrary.FileType.PERUVIAN_TECHNICAL_STANDAR" />
<div class="form-group">
    <label asp-for="Title" class="label"></label>
    <input asp-for="Title" class="form-control" required />
</div>
<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="Code" class="label"></label>
        <input asp-for="Code" class="form-control" required />
    </div>
    <div class="col-lg-6">
        <label asp-for="EffectiveDate" class="label"></label>
        <div class="input-group">
            <input asp-for="EffectiveDate" class="form-control datepicker" />
            <div class="input-group-append">
                <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>
</div>
<div class="form-group">
    <label asp-for="File" class="label">Archivo:</label>
    <div class="custom-file">
        <input asp-for="File" type="file" class="custom-file-input" />
        <label class="custom-file-label" for="customFile">Escoge un archivo</label>
    </div>
</div>