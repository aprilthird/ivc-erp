                                IsToggled="{Binding Racs.SCQ16}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="17." FontSize="Medium" MinimumWidthRequest="40" />
                        <Label
