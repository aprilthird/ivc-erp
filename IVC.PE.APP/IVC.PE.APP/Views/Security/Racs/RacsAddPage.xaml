                                  IsToggled="{Binding Racs.SAQ14}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="15." FontSize="Medium" MinimumWidthRequest="40" />
                        <Label
                            Text="Trabajar sobre equipos en movimiento o riesgosos." 
                            FontSize="Medium"/>
                        <Switch VerticalOptions="Start" HorizontalOptions="EndAndExpand"
                                  IsToggled="{Binding Racs.SAQ15}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
