                                  IsToggled="{Binding Racs.SAQ08}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="09." FontSize="Medium" MinimumWidthRequest="40" />
                        <Label
                            Text="No utilizar protector respiratorio según la actividad (polvos, gases, vapores, etc.)" 
                            FontSize="Medium"/>
