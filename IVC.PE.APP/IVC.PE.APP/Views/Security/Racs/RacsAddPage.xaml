                        <Label
                            Text="Ausencia del jefe y/o Supervisor SSI." 
                            FontSize="Medium"/>
                        <Switch VerticalOptions="Start" HorizontalOptions="EndAndExpand"
                                IsToggled="{Binding Racs.SCQ14}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="15." FontSize="Medium" MinimumWidthRequest="40" />
                        <Label
                            Text="Equipos de emergencias en mal estado, sin inspección, materiales incompletos o ausencia o mal ubicados." 
                            FontSize="Medium"/>
                        <Switch VerticalOptions="Start" HorizontalOptions="EndAndExpand"
                                IsToggled="{Binding Racs.SCQ15}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="16." FontSize="Medium" MinimumWidthRequest="40" />
