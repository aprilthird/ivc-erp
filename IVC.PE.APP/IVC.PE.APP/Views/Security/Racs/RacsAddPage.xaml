                        <Label
                            Text="Dar a conocer con anticipación el estados y las condiciones del sitio de trabajo" 
                            FontSize="Medium"/>
                        <Switch VerticalOptions="Start" HorizontalOptions="EndAndExpand"
                                IsToggled="{Binding Racs.ICQ01}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label
                            Text="Realizar los reportes correspondientes para seguir los conductos regulares de los ajustes" 
                            FontSize="Medium"/>
                        <Switch VerticalOptions="Start" HorizontalOptions="EndAndExpand"
                                IsToggled="{Binding Racs.ICQ02}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label
                            Text="Organizar los elementos de trabajo en el sitio correspondiente" 
