                            FontSize="Medium"/>
                        <Switch VerticalOptions="Start" HorizontalOptions="EndAndExpand"
                                IsToggled="{Binding Racs.SCQ12}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="13." FontSize="Medium" MinimumWidthRequest="40" />
                        <Label
                            Text="Ausencia del Residente." 
                            FontSize="Medium"/>
                        <Switch VerticalOptions="Start" HorizontalOptions="EndAndExpand"
                                IsToggled="{Binding Racs.SCQ13}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
