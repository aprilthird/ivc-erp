                        <Switch VerticalOptions="Start" HorizontalOptions="EndAndExpand"
                                IsToggled="{Binding Racs.SCQ21}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="22." FontSize="Medium" MinimumWidthRequest="40" />
