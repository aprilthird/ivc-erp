                    <Editor
                        Placeholder="Otras alternativas..."
                        AutoSize="TextChanges"
                        Text="{Binding Racs.SpecifyAppliedCorrections}"
                        IsEnabled="{Binding IsEnabled}"/>

                    <Editor
                        Placeholder="Acciones correctivas aplicadas..."
                        AutoSize="TextChanges"
                        Text="{Binding Racs.SpecifyAnotherAlternative}"
                        IsEnabled="{Binding IsEnabled}"/>

                    <Label
                            Text="Foto de la Observación" 
                            FontSize="Medium"
                            VerticalOptions="Center"/>
                    <Button
                            Command="{Binding AddPhotoCommand}"
