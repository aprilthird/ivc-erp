<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IVC.PE.APP.Views.Security.Racs.RacsAddPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Reporte RACS">
    <ContentPage.Content>
        <AbsoluteLayout 
            VerticalOptions="FillAndExpand" 
            HorizontalOptions="FillAndExpand"
            BindingContext="{Binding RacsAddViewModel}"
            Padding="8">
            <ScrollView
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="SizeProportional"
                Padding="0,0,0,80">
                <StackLayout>
                    <Label Text="Proyecto"/>
                    <Picker
                        ItemsSource="{Binding Projects}"
                        ItemDisplayBinding="{Binding Text}"
                        SelectedItem="{Binding SelectedProject}"
                        IsEnabled="{Binding IsEnabled}">
                    </Picker>

                    <Label Text="Fecha"/>
                    <DatePicker 
                        Date="{Binding SelectedDate}"
                        IsEnabled="{Binding IsEnabled}"
                        Format="dd/MM/yyyy"/>

                    <Label Text="Frente"/>
                    <StackLayout>
                        <Entry
                            Text="{Binding WorkFront}"
                            InputTransparent="true"/>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding SelectWorkFrontCommand}"
                                NumberOfTapsRequired="1"/>
                        </StackLayout.GestureRecognizers>
                    </StackLayout>

                    <Label Text="Cuadrilla"/>
                    <StackLayout>
                        <Entry
                            Text="{Binding SewerGroup}"
                            InputTransparent="true"/>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding SelectSewerGroupCommand}"
                                NumberOfTapsRequired="1"/>
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                    <!--Picker
                        SelectedItem="{Binding SelectedSewerGroup}"
                        ItemsSource="{Binding SewerGroups}"
                        ItemDisplayBinding="{Binding Text}"
                        IsEnabled="{Binding IsEnabled}"/-->

                    <Label Text="Responsable de Levantar Observaciones"/>
                    <StackLayout>
                        <Entry
                            Text="{Binding LiftUser}"
                            InputTransparent="true"/>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding SelectLiftUserCommand}"
                                NumberOfTapsRequired="1"/>
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                    <!--Picker
                        SelectedItem="{Binding SelectedUser}"
                        ItemsSource="{Binding Users}"
                        ItemDisplayBinding="{Binding Text}"
                        IsEnabled="{Binding IsEnabled}"/-->

                    <Label Text="Firma" />
                    <Button
                        Command="{Binding AddSignatureCommand}"
                        HorizontalOptions="EndAndExpand"
                        BackgroundColor="#00284A"
                        Text="&#xf5b7;"
                        FontFamily="FontAwesome"
                        TextColor="White"
                        IsEnabled="{Binding IsEnabled}">
                    </Button>
                    <Image
                        Source="{Binding SignatureStream}"
                        HeightRequest="150"
                        BackgroundColor="LightGray" />

                    <!-- Grupo: Condición Subestandar -->
                    <Label 
                        Text="Condición Subestandar"
                        HorizontalTextAlignment="Center" 
                        FontAttributes="Bold" 
                        FontSize="Title"
                        Padding="0,20,0,0"/>
                    <StackLayout Orientation="Horizontal">
                        <Label
                            Text="¿Identifica condición Subestandar?"
                            FontSize="Medium"/>
                        <Switch 
                            VerticalOptions="Start" 
                            HorizontalOptions="EndAndExpand"
                            IsToggled="{Binding Racs.IdentifiesSC}"
                        IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <Editor
                        Placeholder="Descripción de la Condición Subestandar"
                        AutoSize="TextChanges"
                        Text="{Binding Racs.DescriptionIdentifiesSC}"
                        IsEnabled="{Binding IsEnabled}"/>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="01." FontSize="Medium" MinimumWidthRequest="40"/>
                        <Label
                            Text="Falta Orden y Limpieza en áreas de trabajo y almacén."
                            FontSize="Medium"/>
                        <Switch VerticalOptions="Start" HorizontalOptions="EndAndExpand"
                            IsToggled="{Binding Racs.SCQ01}"
                            IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="02." FontSize="Medium" MinimumWidthRequest="40" />
                        <Label
                            Text="Falta señalización (cintas, carteles) en las áreas o delimitación deficiente."
                            FontSize="Medium"/>
                        <Switch VerticalOptions="Start" HorizontalOptions="EndAndExpand"
                                IsToggled="{Binding Racs.SCQ02}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="03." FontSize="Medium" MinimumWidthRequest="40"/>
                        <Label
                            Text="EPPs NO recomendados al área y al trabajo, no hay stock."
                            FontSize="Medium"/>
                        <Switch VerticalOptions="Start" HorizontalOptions="EndAndExpand"
                                IsToggled="{Binding Racs.SCQ03}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="04." FontSize="Medium" MinimumWidthRequest="40" />
                        <Label
                            Text="Documentación MASS desactualizados, sin archivar, no impresos, sin firmar y no están publicados." 
                            FontSize="Medium"/>
                        <Switch VerticalOptions="Start" HorizontalOptions="EndAndExpand"
                                IsToggled="{Binding Racs.SCQ04}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="05." FontSize="Medium" MinimumWidthRequest="40" />
                        <Label
                            Text="Derrame de Hidrocarburo y/o concreto." 
                            FontSize="Medium"/>
                        <Switch VerticalOptions="Start" HorizontalOptions="EndAndExpand"
                                IsToggled="{Binding Racs.SCQ05}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="06." FontSize="Medium" MinimumWidthRequest="40" />
                        <Label
                            Text="Escaleras (sin inspección, mal almacenadas, mal posicionada)" 
                            FontSize="Medium"/>
                        <Switch VerticalOptions="Start" HorizontalOptions="EndAndExpand"
                                IsToggled="{Binding Racs.SCQ06}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="07." FontSize="Medium" MinimumWidthRequest="40"/>
                        <Label
                            Text="Instalaciones eléctricas mal instaladas o inadecuadas." 
                            FontSize="Medium"/>
                        <Switch VerticalOptions="Start" HorizontalOptions="EndAndExpand"
                                IsToggled="{Binding Racs.SCQ07}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="08." FontSize="Medium" MinimumWidthRequest="40"/>
                        <Label
                            Text="Maderas con clavos, presencia de elementos punzantes." 
                            FontSize="Medium"/>
                        <Switch VerticalOptions="Start" HorizontalOptions="EndAndExpand"
                                IsToggled="{Binding Racs.SCQ08}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="09." FontSize="Medium" MinimumWidthRequest="40" />
                        <Label
                            Text="Mal Manejo y disposición de RRSS." 
                            FontSize="Medium"/>
                        <Switch VerticalOptions="Start" HorizontalOptions="EndAndExpand"
                                IsToggled="{Binding Racs.SCQ09}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="10." FontSize="Medium" MinimumWidthRequest="40" />
                        <Label
                            Text="Accesos inadecuados (sin baranda, berma en mal estado, presencia de obstáculos)." 
                            FontSize="Medium"/>
                        <Switch VerticalOptions="Start" HorizontalOptions="EndAndExpand"
                                IsToggled="{Binding Racs.SCQ10}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="11." FontSize="Medium" MinimumWidthRequest="40" />
                        <Label
                            Text="No se evidencia SCTR vigente e impreso y publicado en obra." 
                            FontSize="Medium"/>
                        <Switch VerticalOptions="Start" HorizontalOptions="EndAndExpand"
                                IsToggled="{Binding Racs.SCQ11}"
                                IsEnabled="{Binding IsEnabled}"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="12." FontSize="Medium" MinimumWidthRequest="40" />
                        <Label
